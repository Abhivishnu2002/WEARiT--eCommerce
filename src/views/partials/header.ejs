<div class="announcement-bar">    Get 10% off for your first purchase USE CODE NEW1</div><header class="main-header">    <div class="left-section">        <div class="hamburger-menu" id="mobileMenuToggle">            <div class="hamburger-line"></div>            <div class="hamburger-line"></div>            <div class="hamburger-line"></div>        </div>        <div class="brand-name">WEAR<span>iT</span></div>    </div>    <nav class="center-nav">        <a href="/">Home</a>        <a href="/products">Sale</a>        <a href="/about">About</a>        <a href="/contact">Contact</a>    </nav>    <div class="right-section">        <div class="search-container">            <input                type="text"                class="search-input"                id="searchInput"                placeholder="What are you looking for?"            />            <svg                class="search-icon"                width="16"                height="16"                viewBox="0 0 24 24"                fill="none"                stroke="black"                stroke-width="2"                stroke-linecap="round"                stroke-linejoin="round"            >                <circle cx="11" cy="11" r="8"></circle>                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>            </svg>            <div class="search-results" id="searchResults"></div>        </div>        <a href="/wishlist" class="icon-container">            <svg                class="icon wishlist-icon"                width="22"                height="22"                viewBox="0 0 24 24"                fill="none"                stroke="white"                stroke-width="2"                stroke-linecap="round"                stroke-linejoin="round"            >                <path                    d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"                ></path>            </svg>            <% if (typeof wishlistCount !== 'undefined' && wishlistCount > 0) { %>                <span class="count-badge wishlist-count" id="headerWishlistCount"><%= wishlistCount %></span>            <% } %>        </a>        <a href="/cart" class="icon-container">            <svg                class="icon cart-icon"                width="22"                height="22"                viewBox="0 0 24 24"                fill="none"                stroke="white"                stroke-width="2"                stroke-linecap="round"                stroke-linejoin="round"            >                <circle cx="9" cy="21" r="1"></circle>                <circle cx="20" cy="21" r="1"></circle>                <path                    d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"                ></path>            </svg>            <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>                <span class="count-badge cart-count" id="headerCartCount"><%= cartCount %></span>            <% } %>        </a>        <div class="user-account-container">            <svg                class="icon user-icon"                width="22"                height="22"                viewBox="0 0 24 24"                fill="none"                stroke="white"                stroke-width="2"                stroke-linecap="round"                stroke-linejoin="round"            >                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>                <circle cx="12" cy="7" r="4"></circle>            </svg>            <div class="user-dropdown">                <% if (typeof user !== 'undefined' && user) { %>                <a href="/profile" class="dropdown-item">My Account</a>                <a href="/orders" class="dropdown-item">Orders</a>                <div class="dropdown-divider"></div>                <form action="/logout" method="get">                    <button class="dropdown-item logout-btn" type="submit">                        Logout                    </button>                </form>                <% } else { %>                <a href="/login" class="dropdown-item">Sign In</a>                <a href="/signup" class="dropdown-item">Register</a>                <% } %>            </div>        </div>    </div></header><div class="mobile-menu" id="mobileMenu">    <div class="mobile-menu-header">        <div class="brand-name">WEAR<span>iT</span></div>        <div class="close-menu" id="closeMenu">âœ•</div>    </div>    <nav class="mobile-nav">        <a href="/">Home</a>        <a href="/products">Sale</a>        <a href="/about">About</a>        <a href="/contact">Contact</a>        <% if (typeof user !== 'undefined' && user) { %>        <div class="mobile-account-section">            <span class="mobile-section-title">My Account</span>            <a href="/profile" class="mobile-account-link">Profile</a>            <a href="/orders" class="mobile-account-link">Orders</a>            <form action="/logout" method="get">                <button class="mobile-logout-btn" type="submit">Logout</button>            </form>        </div>        <% } else { %>        <div class="mobile-account-section">            <a href="/login" class="mobile-account-link highlight">Sign In</a>            <a href="/register" class="mobile-account-link highlight"                >Register</a            >        </div>        <% } %>    </nav></div><div class="mobile-menu-overlay" id="menuOverlay"></div><link rel="stylesheet" href="/css/header.css" /><script src="/js/header.js" defer></script>