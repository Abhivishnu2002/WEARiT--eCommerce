<!-- pages/login.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Sign In</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Bootstrap Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
        />
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: -apple-system, BlinkMacSystemFont, "Segoe UI",
                    Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
                    "Helvetica Neue", sans-serif;
            }

            .header {
                background-color: #000;
                color: white;
                padding: 10px 0;
            }

            .promo-banner {
                padding: 10px;
                background-color: #f8f9fa;
            }

            .logo {
                font-size: 24px;
                font-weight: bold;
                text-decoration: none;
                color: white;
            }

            .main-content {
                display: flex;
                min-height: calc(100vh - 60px);
            }

            .login-section {
                flex: 2;
                padding: 40px;
                display: flex;
                justify-content: center;
                align-items: flex-start;
            }

            .features-section {
                flex: 1;
                background-color: #1a1a1a;
                color: white;
                padding: 20px;
            }

            .feature-item {
                margin-bottom: 30px;
                text-align: center;
            }

            .feature-icon {
                font-size: 24px;
                margin-bottom: 10px;
            }

            .form-control:focus {
                border-color: #212529;
                box-shadow: 0 0 0 0.25rem rgba(33, 37, 41, 0.25);
            }

            .btn-dark {
                padding: 0.75rem;
            }

            .input-group-text {
                background-color: transparent;
                border-left: none;
                cursor: pointer;
            }

            .form-control {
                border-right: none;
            }

            .check-icon {
                background-color: #e9ecef;
                border-radius: 50%;
                padding: 2px;
            }

            .divider {
                display: flex;
                align-items: center;
                text-align: center;
                color: #6c757d;
            }

            .divider::before,
            .divider::after {
                content: "";
                flex: 1;
                border-bottom: 1px solid #dee2e6;
            }

            .divider span {
                padding: 0 1rem;
            }

            .nav-link {
                color: white;
                margin: 0 15px;
            }

            .social-icon {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background-color: #000;
                color: white;
                display: flex;
                justify-content: center;
                align-items: center;
                margin-left: 10px;
            }

            .location-icon {
                margin-right: 10px;
            }

            .login-form-container {
                width: 100%;
                max-width: 480px;
            }

            .alert {
                margin-bottom: 20px;
            }
        </style>
    </head>
    <body>
        <!-- Main Content -->
         
        <div class="main-content">
            <!-- Login Section -->
            <div class="login-section">
                <div class="login-form-container">
                    <h1 class="text-center mb-4">Sign In</h1>

                    <!-- Flash Messages -->
                    <% if(typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
                    <div class="alert alert-success"><%= success_msg %></div>
                    <% } %> <% if(typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
                    <div class="alert alert-danger"><%= error_msg %></div>
                    <% } %> <% if(typeof error !== 'undefined' && error.length >0) { %>
                    <div class="alert alert-danger"><%= error %></div>
                    <% } %>

                    <form action="/auth/login" method="POST">
                        <!-- Email field -->
                        <div class="mb-3">
                            <label for="email" class="form-label"
                                >Email address</label
                            >
                            <div class="input-group">
                                <input
                                    type="email"
                                    class="form-control"
                                    id="email"
                                    name="email"
                                    placeholder="Enter your email"
                                    required
                                />
                                <span class="input-group-text border">
                                    <i class="bi bi-check-lg check-icon"></i>
                                </span>
                            </div>
                        </div>

                        <!-- Password field -->
                        <div class="mb-3">
                            <label for="password" class="form-label"
                                >Password</label
                            >
                            <div class="input-group">
                                <input
                                    type="password"
                                    class="form-control"
                                    id="password"
                                    name="password"
                                    placeholder="Enter your password"
                                    required
                                />
                                <span class="input-group-text border">
                                    <i
                                        class="bi bi-eye-slash"
                                        id="togglePassword"
                                    ></i>
                                </span>
                            </div>
                            <div class="d-flex justify-content-end mt-2">
                                <a
                                    href="/auth/forgetpassword"
                                    class="text-decoration-none text-dark small"
                                    >Forgot password?</a
                                >
                            </div>
                        </div>

                        <!-- Login button -->
                        <div class="d-grid gap-2 my-4">
                            <button type="submit" class="btn btn-dark">
                                Log in
                            </button>
                        </div>

                        <!-- Sign up link -->
                        <div class="text-center mb-4">
                            <span class="small"
                                >New user?
                                <a
                                    href="/auth/signup"
                                    class="text-decoration-none text-dark"
                                    >Sign up</a
                                ></span
                            >
                        </div>

                        <!-- Divider -->
                        <div class="divider mb-4">
                            <span class="small">Or Login with</span>
                        </div>

                        <!-- Google login button -->
                        <div class="d-grid gap-2">
                            <button
                                type="button"
                                class="btn btn-outline-secondary"
                            >
                            <a href="/auth/google" class="btn btn-outline-secondary d-flex align-items-center justify-content-center gap-2">
                                <!-- Google SVG icon -->
                                <svg width="18" height="18" viewBox="0 0 24 24"> ... </svg>
                                Google
                            </a>
                            
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        <!-- Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Toggle password visibility
            document
                .getElementById("togglePassword")
                .addEventListener("click", function () {
                    const passwordInput = document.getElementById("password");
                    if (passwordInput.type === "password") {
                        passwordInput.type = "text";
                        this.classList.replace("bi-eye-slash", "bi-eye");
                    } else {
                        passwordInput.type = "password";
                        this.classList.replace("bi-eye", "bi-eye-slash");
                    }
                });
        </script>
    </body>
</html>
