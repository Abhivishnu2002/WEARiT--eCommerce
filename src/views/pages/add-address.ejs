<!DOCTYPE html><html lang="en">    <head>        <meta charset="UTF-8" />        <meta name="viewport" content="width=device-width, initial-scale=1.0" />        <title>WEARiT - Add New Address</title>        <link            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"            rel="stylesheet"        />        <link            rel="stylesheet"            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"        />        <link rel="stylesheet" href="/css/navbar.css" />        <link rel="stylesheet" href="/css/address.css" />        <link rel="stylesheet" href="/css/address-form.css" />    </head>    <body class="address-page">        <%- include('../partials/header') %>        <main class="main-content">            <div class="container-fluid address-container">                <div class="row">                <div class="col-lg-3 col-md-4">                    <%- include('../partials/navbar', { activePage: 'address',                    user: user }) %>                </div>                <div class="col-lg-9 col-md-8">                    <div class="address-content">                        <div class="address-header">                            <h2 class="address-title">Add New Address</h2>                            <div class="address-actions">                                <a                                    href="<%= returnTo === 'checkout' ? '/checkout' : '/profile/addresses' %>"                                    class="btn btn-outline-dark"                                >                                    <i class="fas fa-arrow-left me-2"></i> Back                                    to <%= returnTo === 'checkout' ? 'Checkout' : 'Addresses' %>                                </a>                            </div>                        </div>                        <div class="address-form-container">                            <form                                id="addressForm"                                action="/profile/addresses/add<%= returnTo === 'checkout' ? '?returnTo=checkout' : '' %>"                                method="POST"                                class="address-form"                                novalidate                            >                                <div class="row">                                    <div class="col-md-6 mb-3">                                        <label for="name" class="form-label required">Full Name</label>                                        <input                                            type="text"                                            class="form-control <%= locals.errors && errors.name ? 'is-invalid' : '' %>"                                            id="name"                                            name="name"                                            value="<%= locals.formData ? formData.name || '' : '' %>"                                            required                                        />                                        <div class="invalid-feedback" id="name-error">                                            <% if (locals.errors && errors.name) { %>                                                <i class="fas fa-exclamation-circle me-1"></i><%= errors.name %>                                            <% } %>                                        </div>                                    </div>                                    <div class="col-md-6 mb-3">                                        <label for="mobile" class="form-label required">Mobile Number</label>                                        <input                                            type="tel"                                            class="form-control <%= locals.errors && errors.mobile ? 'is-invalid' : '' %>"                                            id="mobile"                                            name="mobile"                                            value="<%= locals.formData ? formData.mobile || '' : '' %>"                                            pattern="[0-9]{10}"                                            title="Please enter a valid 10-digit mobile number"                                            required                                        />                                        <div class="invalid-feedback" id="mobile-error">                                            <% if (locals.errors && errors.mobile) { %>                                                <i class="fas fa-exclamation-circle me-1"></i><%= errors.mobile %>                                            <% } %>                                        </div>                                    </div>                                </div>                                <div class="mb-3">                                    <label for="address" class="form-label required">Address (House No, Building, Street, Area)</label>                                    <textarea                                        class="form-control <%= locals.errors && errors.address ? 'is-invalid' : '' %>"                                        id="address"                                        name="address"                                        rows="3"                                        placeholder="Enter your complete address"                                        required                                    ><%= locals.formData ? formData.address || '' : '' %></textarea>                                    <div class="invalid-feedback" id="address-error">                                        <% if (locals.errors && errors.address) { %>                                            <i class="fas fa-exclamation-circle me-1"></i><%= errors.address %>                                        <% } %>                                    </div>                                </div>                                <div class="row">                                    <div class="col-md-4 mb-3">                                        <label for="city" class="form-label required">City</label>                                        <input                                            type="text"                                            class="form-control <%= locals.errors && errors.city ? 'is-invalid' : '' %>"                                            id="city"                                            name="city"                                            value="<%= locals.formData ? formData.city || '' : '' %>"                                            required                                        />                                        <div class="invalid-feedback" id="city-error">                                            <% if (locals.errors && errors.city) { %>                                                <i class="fas fa-exclamation-circle me-1"></i><%= errors.city %>                                            <% } %>                                        </div>                                    </div>                                    <div class="col-md-4 mb-3">                                        <label for="state" class="form-label required">State</label>                                        <select                                            class="form-select <%= locals.errors && errors.state ? 'is-invalid' : '' %>"                                            id="state"                                            name="state"                                            required                                        >                                            <option value="">Select State</option>                                            <option value="Kerala" <%= locals.formData && formData.state === 'Kerala' ? 'selected' : '' %>>Kerala</option>                                            <option value="Tamil Nadu" <%= locals.formData && formData.state === 'Tamil Nadu' ? 'selected' : '' %>>Tamil Nadu</option>                                            <option value="Karnataka" <%= locals.formData && formData.state === 'Karnataka' ? 'selected' : '' %>>Karnataka</option>                                            <option value="Andhra Pradesh" <%= locals.formData && formData.state === 'Andhra Pradesh' ? 'selected' : '' %>>Andhra Pradesh</option>                                            <option value="Telangana" <%= locals.formData && formData.state === 'Telangana' ? 'selected' : '' %>>Telangana</option>                                            <option value="Maharashtra" <%= locals.formData && formData.state === 'Maharashtra' ? 'selected' : '' %>>Maharashtra</option>                                            <option value="Gujarat" <%= locals.formData && formData.state === 'Gujarat' ? 'selected' : '' %>>Gujarat</option>                                            <option value="Rajasthan" <%= locals.formData && formData.state === 'Rajasthan' ? 'selected' : '' %>>Rajasthan</option>                                            <option value="Punjab" <%= locals.formData && formData.state === 'Punjab' ? 'selected' : '' %>>Punjab</option>                                            <option value="Haryana" <%= locals.formData && formData.state === 'Haryana' ? 'selected' : '' %>>Haryana</option>                                            <option value="Uttar Pradesh" <%= locals.formData && formData.state === 'Uttar Pradesh' ? 'selected' : '' %>>Uttar Pradesh</option>                                            <option value="Madhya Pradesh" <%= locals.formData && formData.state === 'Madhya Pradesh' ? 'selected' : '' %>>Madhya Pradesh</option>                                            <option value="Bihar" <%= locals.formData && formData.state === 'Bihar' ? 'selected' : '' %>>Bihar</option>                                            <option value="West Bengal" <%= locals.formData && formData.state === 'West Bengal' ? 'selected' : '' %>>West Bengal</option>                                            <option value="Odisha" <%= locals.formData && formData.state === 'Odisha' ? 'selected' : '' %>>Odisha</option>                                            <option value="Jharkhand" <%= locals.formData && formData.state === 'Jharkhand' ? 'selected' : '' %>>Jharkhand</option>                                            <option value="Assam" <%= locals.formData && formData.state === 'Assam' ? 'selected' : '' %>>Assam</option>                                            <option value="Himachal Pradesh" <%= locals.formData && formData.state === 'Himachal Pradesh' ? 'selected' : '' %>>Himachal Pradesh</option>                                            <option value="Uttarakhand" <%= locals.formData && formData.state === 'Uttarakhand' ? 'selected' : '' %>>Uttarakhand</option>                                            <option value="Goa" <%= locals.formData && formData.state === 'Goa' ? 'selected' : '' %>>Goa</option>                                            <option value="Delhi" <%= locals.formData && formData.state === 'Delhi' ? 'selected' : '' %>>Delhi</option>                                        </select>                                        <div class="invalid-feedback" id="state-error">                                            <% if (locals.errors && errors.state) { %>                                                <i class="fas fa-exclamation-circle me-1"></i><%= errors.state %>                                            <% } %>                                        </div>                                    </div>                                    <div class="col-md-4 mb-3">                                        <label for="pincode" class="form-label required">PIN Code</label>                                        <input                                            type="text"                                            class="form-control <%= locals.errors && errors.pincode ? 'is-invalid' : '' %>"                                            id="pincode"                                            name="pincode"                                            value="<%= locals.formData ? formData.pincode || '' : '' %>"                                            pattern="[0-9]{6}"                                            title="Please enter a valid 6-digit pincode"                                            maxlength="6"                                            required                                        />                                        <div class="invalid-feedback" id="pincode-error">                                            <% if (locals.errors && errors.pincode) { %>                                                <i class="fas fa-exclamation-circle me-1"></i><%= errors.pincode %>                                            <% } %>                                        </div>                                    </div>                                </div>                                <div class="mb-4">                                    <div class="form-check">                                        <input                                            class="form-check-input"                                            type="checkbox"                                            id="isDefault"                                            name="isDefault"                                            value="true"                                            <%= locals.formData && formData.isDefault ? 'checked' : '' %>                                        />                                        <label                                            class="form-check-label"                                            for="isDefault"                                        >                                            Set as default address                                        </label>                                    </div>                                </div>                                <% if (locals.errors && errors.general) { %>                                    <div class="alert alert-danger" role="alert">                                        <i class="fas fa-exclamation-triangle me-2"></i>                                        <%= errors.general %>                                    </div>                                <% } %>                                <div class="d-grid">                                    <button type="submit" class="btn btn-dark btn-lg" id="submitBtn">                                        <span class="btn-text">                                            <i class="fas fa-save me-2"></i>Save Address                                        </span>                                        <span class="btn-loading d-none">                                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>                                            Saving...                                        </span>                                    </button>                                </div>                            </form>                        </div>                    </div>                </div>            </div>        </main>        <% if(typeof messages !== 'undefined') { %> <% if(messages.success_msg)        { %>        <div class="alert-float alert-success"><%= messages.success_msg %></div>        <% } %> <% if(messages.error_msg) { %>        <div class="alert-float alert-danger"><%= messages.error_msg %></div>        <% } %> <% } %> <%- include('../partials/footer') %>        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>        <script src="/js/address-form.js"></script>    </body></html>