<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Details - WEARiT</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="/css/navbar.css" />
  <link rel="stylesheet" href="/css/order-details.css" />
</head>
<body>
  <%- include('../partials/header') %>
  <div class="container my-4">
    <div class="breadcrumb-container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/profile">Profile</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/orders">My Orders</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            Order Details
          </li>
        </ol>
      </nav>
    </div>

    <div class="row">
      <div class="col-lg-3 mb-4">
        <%- include('../partials/navbar', { activePage: 'orders', user: user, wishlistCount: wishlistCount || 0 }) %>
      </div>
      <div class="col-lg-9">
        <div class="order-details-card">
          <h2 class="order-details-title">Order Details</h2>
          
          <div class="order-header">
            <div>
              <div class="order-id">Order ID: <strong><%= order.orderID %></strong></div>
              <div class="order-date">Ordered on: <%= new Date(order.orderDate).toLocaleDateString() %></div>
            </div>
            <div class="order-status">
              <span class="status-badge <%= order.status.toLowerCase().replace(/\s+/g, '-') %>">
                <%= order.status.toUpperCase() %>
              </span>
              <% if (order.paymentStatus === 'failed') { %>
                <span class="status-badge status-failed">PAYMENT FAILED</span>
              <% } %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-md-6">
              <div class="info-section">
                <h4>Shipping Address</h4>
                <div class="address-details">
                  <% if (order.address && (order.address.name || order.address.address)) { %>
                    <p><strong><%= order.address.name || 'Unknown' %></strong></p>
                    <p><%= order.address.address || order.address.addressLine1 || 'Unknown address' %></p>
                    <p><%= order.address.city || 'Unknown' %>, <%= order.address.state || 'Unknown' %> - <%= order.address.pincode || 'Unknown' %></p>
                    <p>Phone: <%= order.address.mobile || 'Not provided' %></p>
                  <% } else { %>
                    <p class="text-muted">
                      <i class="fas fa-exclamation-triangle me-2"></i>
                      Unknown address - Address information is no longer available
                    </p>
                  <% } %>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="info-section">
                <h4>Payment Information</h4>
                <p><strong>Method:</strong> <%= (order.paymentMethod || order.paymentMentod) === 'COD' ? 'Cash on Delivery' : ((order.paymentMethod || order.paymentMentod) === 'wallet' ? 'Wallet' : 'Online Payment') %></p>
                <p>
                  <strong>Status:</strong> 
                  <% if (order.paymentStatus === 'failed') { %>
                    <span class="payment-status failed">Failed</span>
                  <% } else if (order.status === 'cancelled') { %>
                    <span class="payment-status cancelled">Cancelled</span>
                  <% } else if (order.status === 'returned' || order.status === 'return pending') { %>
                    <span class="payment-status returned"><%= order.status === 'returned' ? 'Refunded' : 'Refund Pending' %></span>
                  <% } else if ((order.paymentMethod || order.paymentMentod) === 'COD') { %>
                    <% if (order.status === 'delivered') { %>
                      <span class="payment-status paid">Paid</span>
                    <% } else { %>
                      <span class="payment-status pending">Pending</span>
                    <% } %>
                  <% } else { %>
                    <span class="payment-status paid">Paid</span>
                  <% } %>
                </p>
                <% if (order.paymentStatus === 'failed') { %>
                <div class="mt-3">
                  <button class="btn btn-warning retry-payment-btn" data-order-id="<%= order._id %>">
                    <i class="fas fa-sync-alt"></i> Retry Payment
                  </button>
                </div>
                <% } %>
              </div>
            </div>
          </div>
          
          <div class="order-products-section">
            <h4 class="section-title">Order Items</h4>
            
            <% if (order.products && order.products.length > 0) { %>
              <% order.products.forEach(product => { %>
                <div class="product-item">
                  <div class="row align-items-center">
                    <div class="col-md-2">
                      <div class="product-image">
                        <% if (product.product && product.product.images && product.product.images.length > 0) { %>
                          <% const mainImage = product.product.images.find(img => img.isMain) || product.product.images[0]; %>
                          <img src="<%= mainImage ? mainImage.url : '/images/placeholder.jpg' %>" alt="<%= product.product.name %>" class="img-fluid" />
                        <% } else { %>
                          <img src="/images/placeholder.jpg" alt="<%= product.product ? 'Product Image' : 'Product Deleted' %>" class="img-fluid opacity-50" />
                        <% } %>
                      </div>
                    </div>
                    <div class="col-md-5">
                      <h5 class="product-name">
                        <%= product.product ? product.product.name : 'Product Deleted' %>
                        <% if (!product.product) { %>
                          <span class="badge bg-secondary ms-2">Deleted</span>
                        <% } %>
                      </h5>
                      <p class="product-details">
                        <strong>Size:</strong> <%= product.variant ? product.variant.size : 'N/A' %>
                      </p>
                      <p class="product-details">
                        <strong>Brand:</strong> <%= product.product && product.product.brand ? product.product.brand : 'N/A' %>
                      </p>
                      <p class="product-details">
                        <strong>Quantity:</strong> <%= product.quantity %>
                      </p>
                    </div>
                    <div class="col-md-3 text-end">
                      <div class="product-price">
                        <% if (product.variant) { %>
                          <% if (product.variant.varientPrice > product.variant.salePrice) { %>
                            <span class="original-price">₹<%= product.variant.varientPrice.toFixed(2) %></span>
                            <span>₹<%= product.variant.salePrice.toFixed(2) %></span>
                          <% } else { %>
                            <span>₹<%= product.variant.salePrice.toFixed(2) %></span>
                          <% } %>
                        <% } else { %>
                          <span>₹0.00</span>
                        <% } %>
                      </div>
                      <div class="product-total">Total: ₹<%= (product.variant ? product.variant.salePrice * product.quantity : 0).toFixed(2) %></div>
                      <div class="product-status-badge <%= product.status ? product.status.toLowerCase().replace(/\s+/g, '-') : 'pending' %>">
                        <%= product.status ? product.status.toUpperCase() : 'PENDING' %>
                      </div>
                    </div>
                    <div class="col-md-2 text-end">
                      <% if (product.status !== 'cancelled' && product.status !== 'delivered' && product.status !== 'returned' && product.status !== 'return pending' && order.paymentStatus !== 'failed') { %>
                        <button class="btn btn-sm btn-danger cancel-product-btn" data-order-id="<%= order._id %>" data-product-id="<%= product._id %>">
                          Cancel Item
                        </button>
                      <% } else if (product.status === 'delivered') { %>
                        <button class="btn btn-sm btn-warning return-product-btn" data-order-id="<%= order._id %>" data-product-id="<%= product._id %>">
                          Return Item
                        </button>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="text-center py-3">
                <p>No products in this order</p>
              </div>
            <% } %>
          </div>
          
          <div class="order-summary-section">
            <h4 class="section-title">Order Summary</h4>
            <div class="summary-row">
              <span class="summary-label">Total</span>
              <span class="summary-value">₹<%= order.regularTotal ? order.regularTotal.toFixed(2) : order.itemsTotal.toFixed(2) %></span>
            </div>
            
            <% if (order.discount && order.discount > 0) { %>
              <div class="summary-row">
                <span class="summary-label">Discount</span>
                <span class="summary-value discount-value">-₹<%= order.discount.toFixed(2) %></span>
              </div>
            <% } %>
            
            <div class="summary-row">
              <span class="summary-label">Sub Total</span>
              <span class="summary-value">₹<%= (order.regularTotal ? order.regularTotal - order.discount : order.itemsTotal).toFixed(2) %></span>
            </div>
            
            <!-- Coupon discount row -->
            <% if (order.couponDiscount && order.couponDiscount > 0) { %>
              <div class="summary-row">
                <span class="summary-label">
                  Coupon Discount
                  <% if (order.couponInfo && order.couponInfo.code) { %>
                    <span class="coupon-code-badge"><%= order.couponInfo.code %></span>
                  <% } %>
                </span>
                <span class="summary-value discount-value">-₹<%= order.couponDiscount.toFixed(2) %></span>
              </div>
            <% } %>
            
            <% if (order.shippingCharge && order.shippingCharge > 0) { %>
              <div class="summary-row">
                <span class="summary-label">Shipping Charge</span>
                <span class="summary-value">₹<%= order.shippingCharge.toFixed(2) %></span>
              </div>
            <% } else { %>
              <div class="summary-row">
                <span class="summary-label">Shipping Charge</span>
                <span class="summary-value free-shipping">Free</span>
              </div>
            <% } %>
            
            <div class="summary-row grand-total">
              <span>Grand Total</span>
              <span>₹<%= order.grandTotal.toFixed(2) %></span>
            </div>
          </div>
          
          <div class="action-buttons">
            <% if (order.paymentStatus === 'failed') { %>
              <button class="btn btn-warning retry-payment-btn" data-order-id="<%= order._id %>">
                <i class="fas fa-sync-alt"></i> Retry Payment
              </button>
            <% } %>
            
            <% if (order.canBeCancelled && order.paymentStatus !== 'failed') { %>
              <button class="btn cancel-order-btn" data-order-id="<%= order._id %>">
                Cancel Order
              </button>
            <% } %>
            
            <% if (order.canBeReturned) { %>
              <button class="btn return-order-btn" data-order-id="<%= order._id %>">
                Return Order
              </button>
            <% } %>
            
            <% if (order.paymentStatus !== 'failed') { %>
              <a href="/orders/<%= order._id %>/track" class="btn track-order-btn">
                Track Order
              </a>
            <% } %>

            <%
              // Invoice download conditions:
              // 1. Payment status should not be 'failed'
              // 2. For COD orders, invoice is available after delivery (payment status becomes completed after delivery)
              // 3. For other payment methods, invoice is available after payment completion
              let canDownloadInvoice = false;
              const paymentMethod = (order.paymentMethod || order.paymentMentod || '').toLowerCase();

              if (order.paymentStatus !== 'failed') {
                if (paymentMethod === 'cod') {
                  // For COD, invoice available after delivery (when payment status becomes completed)
                  canDownloadInvoice = order.orderStatus === 'delivered' || order.paymentStatus === 'completed';
                } else {
                  // For other payment methods, invoice available after payment completion
                  canDownloadInvoice = order.paymentStatus === 'completed';
                }
              }
            %>

            <% if (canDownloadInvoice) { %>
              <a href="/orders/invoice/<%= order._id %>" class="btn btn-outline-dark">
                <i class="fas fa-file-invoice me-2"></i>Download Invoice
              </a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('../partials/footer') %>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="/js/order-details.js"></script>
</body>
</html>
