<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Sign Up</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/signup.css" />
    </head>
    <body>
        <div class="signup-wrapper">
            <div class="signup-container">
                <div class="signup-card">
                    <div class="signup-header">
                        <div class="brand-logo">
                            <h1 class="brand-name">WEARiT</h1>
                            <p class="brand-tagline">Fashion that speaks your style</p>
                        </div>
                        <h2 class="signup-title">Create an Account</h2>
                        <p class="signup-subtitle">Join us and start shopping today</p>
                    </div>

                    <form id="signupForm" action="/signup" method="POST" novalidate aria-label="Sign up form">
                        <div class="form-group">
                            <label for="name" class="form-label required">Full Name</label>
                            <div class="input-wrapper">
                                <div class="input-group">
                                    <span class="input-group-text" aria-hidden="true">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="name"
                                        name="name"
                                        placeholder="Enter your full name"
                                        value="<%= typeof formData !== 'undefined' && formData.name ? formData.name : '' %>"
                                        required
                                        aria-describedby="nameError"
                                        autocomplete="name"
                                        maxlength="50"
                                    />
                                    <span class="input-group-text validation-icon" aria-hidden="true">
                                        <i class="bi bi-check-circle-fill text-success d-none" id="nameValid"></i>
                                        <i class="bi bi-x-circle-fill text-danger d-none" id="nameInvalid"></i>
                                    </span>
                                </div>
                                <div class="invalid-feedback" id="nameError" role="alert"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email" class="form-label required">Email Address</label>
                            <div class="input-wrapper">
                                <div class="input-group">
                                    <span class="input-group-text" aria-hidden="true">
                                        <i class="bi bi-envelope"></i>
                                    </span>
                                    <input
                                        type="email"
                                        class="form-control"
                                        id="email"
                                        name="email"
                                        placeholder="Enter your email address"
                                        value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
                                        autocomplete="email"
                                        required
                                        aria-describedby="emailError"
                                    />
                                    <span class="input-group-text validation-icon" aria-hidden="true">
                                        <i class="bi bi-check-circle-fill text-success d-none" id="emailValid"></i>
                                        <i class="bi bi-x-circle-fill text-danger d-none" id="emailInvalid"></i>
                                    </span>
                                </div>
                                <div class="invalid-feedback" id="emailError" role="alert"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="mobile" class="form-label required">Mobile Number</label>
                            <div class="input-wrapper">
                                <div class="input-group">
                                    <span class="input-group-text" aria-hidden="true">
                                        <i class="bi bi-phone"></i>
                                    </span>
                                    <input
                                        type="tel"
                                        class="form-control"
                                        id="mobile"
                                        name="mobile"
                                        placeholder="Enter your 10-digit mobile number"
                                        value="<%= typeof formData !== 'undefined' && formData.mobile ? formData.mobile : '' %>"
                                        autocomplete="tel"
                                        required
                                        aria-describedby="mobileError"
                                        maxlength="10"
                                        pattern="[6-9][0-9]{9}"
                                    />
                                    <span class="input-group-text validation-icon" aria-hidden="true">
                                        <i class="bi bi-check-circle-fill text-success d-none" id="mobileValid"></i>
                                        <i class="bi bi-x-circle-fill text-danger d-none" id="mobileInvalid"></i>
                                    </span>
                                </div>
                                <div class="invalid-feedback" id="mobileError" role="alert"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="form-label required">
                                Password
                                <span class="form-tooltip" data-tooltip="Password must be at least 8 characters with uppercase, lowercase, number, and special character"></span>
                            </label>
                            <div class="input-wrapper">
                                <div class="input-group">
                                    <span class="input-group-text" aria-hidden="true">
                                        <i class="bi bi-lock"></i>
                                    </span>
                                    <input
                                        type="password"
                                        class="form-control"
                                        id="password"
                                        name="password"
                                        placeholder="Create a strong password"
                                        autocomplete="new-password"
                                        required
                                        aria-describedby="passwordError passwordStrength"
                                        minlength="8"
                                    />
                                    <button type="button" class="input-group-text password-toggle" id="togglePassword" aria-label="Show password">
                                        <i class="bi bi-eye-slash"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="passwordError" role="alert"></div>
                                <div class="password-strength mt-2 d-none" id="passwordStrength" aria-live="polite">
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar" id="passwordStrengthBar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <small class="text-muted" id="passwordStrengthText">Password strength</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword" class="form-label required">Confirm Password</label>
                            <div class="input-wrapper">
                                <div class="input-group">
                                    <span class="input-group-text" aria-hidden="true">
                                        <i class="bi bi-shield-lock"></i>
                                    </span>
                                    <input
                                        type="password"
                                        class="form-control"
                                        id="confirmPassword"
                                        name="confirmPassword"
                                        placeholder="Confirm your password"
                                        autocomplete="new-password"
                                        required
                                        aria-describedby="confirmPasswordError"
                                    />
                                    <button type="button" class="input-group-text password-toggle" id="toggleConfirmPassword" aria-label="Show confirm password">
                                        <i class="bi bi-eye-slash"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback" id="confirmPasswordError" role="alert"></div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="referralCode" class="form-label">
                                Referral Code (Optional)
                                <span class="form-tooltip" data-tooltip="Enter a referral code if you have one to get special benefits"></span>
                            </label>
                            <div class="input-wrapper">
                                <div class="input-group">
                                    <span class="input-group-text" aria-hidden="true">
                                        <i class="bi bi-gift"></i>
                                    </span>
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="referralCode"
                                        name="referralCode"
                                        placeholder="Enter referral code if you have one"
                                        value="<%= typeof referralCode !== 'undefined' ? referralCode : '' %>"
                                        aria-describedby="referralCodeError"
                                        maxlength="10"
                                        style="text-transform: uppercase;"
                                    />
                                    <span class="input-group-text validation-icon" aria-hidden="true">
                                        <i class="bi bi-check-circle-fill text-success d-none" id="referralValid"></i>
                                        <i class="bi bi-x-circle-fill text-danger d-none" id="referralInvalid"></i>
                                    </span>
                                </div>
                                <div class="invalid-feedback" id="referralCodeError" role="alert"></div>
                            </div>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="termsCheck" name="termsCheck" required aria-describedby="termsCheckError">
                            <label class="form-check-label" for="termsCheck">
                                I agree to the <a href="#" class="terms-link" target="_blank" rel="noopener noreferrer">Terms of Service</a> and <a href="#" class="terms-link" target="_blank" rel="noopener noreferrer">Privacy Policy</a>
                            </label>
                            <div class="invalid-feedback" id="termsCheckError" role="alert">You must agree to the terms and conditions</div>
                        </div>

                        <button type="submit" class="btn btn-primary signup-btn" id="signupBtn" aria-describedby="signupBtnHelp">
                            <span class="btn-text">Create Account</span>
                            <span class="btn-spinner d-none">
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                Creating account...
                            </span>
                        </button>
                        <div id="signupBtnHelp" class="sr-only">Click to create your account after filling all required fields</div>

                        <div class="divider">
                            <span>Or sign up with</span>
                        </div>

                        <a href="/google" class="btn btn-outline-secondary google-btn" role="button">
                            <svg width="18" height="18" viewBox="0 0 24 24" class="me-2" aria-hidden="true">
                                <path
                                    d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                                    fill="#4285F4"
                                />
                                <path
                                    d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                                    fill="#34A853"
                                />
                                <path
                                    d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                                    fill="#FBBC05"
                                />
                                <path
                                    d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                                    fill="#EA4335"
                                />
                            </svg>
                            Continue with Google
                        </a>

                        <div class="login-link">
                            <p>Already have an account? <a href="/login" class="fw-semibold">Sign in</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="/js/signup.js"></script>
        
        <!-- Handle server-side messages -->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                <% if(typeof messages !== 'undefined' && messages.success_msg && messages.success_msg.length > 0) { %>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: '<%= messages.success_msg[0] %>',
                        confirmButtonColor: '#198754',
                        timer: 3000,
                        timerProgressBar: true
                    });
                <% } %>
                
                <% if(typeof messages !== 'undefined' && messages.error_msg && messages.error_msg.length > 0) { %>
                    Swal.fire({
                        icon: 'error',
                        title: 'Registration Failed',
                        text: '<%= messages.error_msg[0] %>',
                        confirmButtonColor: '#dc3545'
                    });
                <% } %>
                
                <% if(typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '<%= messages.error[0] %>',
                        confirmButtonColor: '#dc3545'
                    });
                <% } %>
                
                <% if(typeof validationErrors !== 'undefined' && validationErrors) { %>
                    const validationErrors = <%- JSON.stringify(validationErrors || {}) %>;
                    if (Object.keys(validationErrors).length > 0) {
                        for (const [field, message] of Object.entries(validationErrors)) {
                            const input = document.getElementById(field);
                            const errorElement = document.getElementById(field + 'Error');
                            if (input && errorElement) {
                                input.classList.add('is-invalid');
                                errorElement.textContent = message;
                                errorElement.style.display = 'block';
                            }
                        }
                    }
                <% } %>
            });
        </script>
    </body>
</html>
