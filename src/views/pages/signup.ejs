<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sign Up Page</title>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: "Inter", Arial, sans-serif;
            }

            body {
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 100vh;
                padding: 10px;
                background-color: #f9f9f9;
            }

            .container {
                width: 100%;
                max-width: 360px;
                padding: 20px;
                background-color: white;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.04);
            }

            h1 {
                text-align: center;
                margin-bottom: 20px;
                font-size: 22px;
            }

            .form-group {
                margin-bottom: 15px;
            }

            label {
                display: block;
                margin-bottom: 6px;
                font-size: 13px;
            }

            .input-group {
                position: relative;
            }

            input {
                width: 100%;
                padding: 10px 12px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 13px;
            }

            .password-field {
                padding-right: 34px;
            }

            .eye-icon {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
                color: #888;
            }

            .referral-section {
                margin: 18px 0;
                text-align: center;
            }

            .referral-text {
                font-size: 13px;
                margin-bottom: 10px;
            }

            .referral-btn {
                background-color: #f2f2f2;
                border: none;
                padding: 8px 15px;
                border-radius: 20px;
                font-size: 13px;
                font-weight: 500;
                cursor: pointer;
            }

            .account-section {
                text-align: center;
                margin-bottom: 15px;
                font-size: 13px;
            }

            .account-section a {
                color: #000;
                font-weight: 500;
                text-decoration: none;
            }

            .signup-btn {
                width: 100%;
                background-color: #000;
                color: white;
                border: none;
                padding: 10px;
                border-radius: 6px;
                font-size: 14px;
                font-weight: 500;
                cursor: pointer;
                margin-bottom: 15px;
            }

            .divider {
                display: flex;
                align-items: center;
                margin: 15px 0;
                color: #777;
                font-size: 13px;
            }

            .divider::before,
            .divider::after {
                content: "";
                flex: 1;
                border-bottom: 1px solid #ddd;
            }

            .divider span {
                padding: 0 10px;
            }

            .google-btn {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 6px;
                background-color: white;
                font-size: 13px;
                cursor: pointer;
            }

            .google-btn svg {
                margin-right: 8px;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Sign up</h1>
            <input
                type="hidden"
                id="message"
                value="<%=  %>"
                name="message"
                disabled
            />
            <form>
                <div class="form-group">
                    <label for="fullname">Full name</label>
                    <div class="input-group">
                        <input
                            type="text"
                            id="fullname"
                            name="fullname"
                            placeholder="Label (required)"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <div class="input-group">
                        <input
                            type="email"
                            id="email"
                            name="email"
                            placeholder="Label (required)"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label for="mobile">Mobile Number</label>
                    <div class="input-group">
                        <input
                            type="tel"
                            id="mobile"
                            name="mobile"
                            placeholder="Label (required)"
                        />
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <div class="input-group">
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="password-field"
                            placeholder="Label (required)"
                        />
                        <svg
                            class="eye-icon"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"
                            ></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm password</label>
                    <div class="input-group">
                        <input
                            type="password"
                            id="confirm-password"
                            name="confirmPassword"
                            class="password-field"
                            placeholder="Label (required)"
                        />
                        <svg
                            class="eye-icon"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                        >
                            <path
                                d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"
                            ></path>
                            <circle cx="12" cy="12" r="3"></circle>
                        </svg>
                    </div>
                </div>

                <div class="referral-section">
                    <p class="referral-text">
                        Anyone has referred You? Claim the reward
                    </p>
                    <a href="/referral">
                        <button type="button" class="referral-btn">
                            REFFERAL CODE
                        </button>
                    </a>
                </div>

                <div class="account-section">
                    <p>Already have an account? <a href="/login">Log in</a></p>
                </div>

                <button type="submit" class="signup-btn">Sign Up</button>

                <div class="divider">
                    <span>Or Register with</span>
                </div>

                <button type="button" class="google-btn">
                    <svg width="18" height="18" viewBox="0 0 24 24">
                        <path
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                            fill="#4285F4"
                        />
                        <path
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                            fill="#34A853"
                        />
                        <path
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                            fill="#FBBC05"
                        />
                        <path
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                            fill="#EA4335"
                        />
                    </svg>
                    Google
                </button>
            </form>
        </div>
        <script>
            const message = document.getElementById("message").value;
            if (message) {
                Swal.fire(message);
            }
        </script>
    </body>
</html>
