                margin-bottom: 2rem;
                position: relative;
                display: inline-block;
            }

            .section-title:after {
                content: "";
                position: absolute;
                width: 50%;
                height: 3px;
                background-color: var(--accent-color);
                bottom: -8px;
                left: 0;
            }

            @media (max-width: 768px) {
