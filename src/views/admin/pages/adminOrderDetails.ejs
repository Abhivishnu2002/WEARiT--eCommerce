<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Order Details</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
        <link rel="stylesheet" href="/css/admin-navbar.css">
        <link rel="stylesheet" href="/css/admin-orders.css">
    </head>
    <body>
        <% if (typeof admin !== 'undefined') { %>
            <%- include('../partials/navbar', {activePage: 'orders'}) %>
        <% } else { %>
            <header class="admin-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <h1>WEARiT Admin</h1>
                        </div>
                    </div>
                </div>
            </header>
        <% } %>
        <main class="admin-main">
            <div class="admin-content">
                <% if (locals.success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (locals.error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <div class="order-header">
                    <h2>Order Details</h2>
                    <div class="breadcrumb-nav">
                        <a href="/admin/dashboard">Dashboard</a>
                        <span class="separator">></span>
                        <a href="/admin/orders">Order List</a>
                        <span class="separator">></span>
                        <span class="current">Order Details</span>
                    </div>
                </div>

                <div class="order-actions">
                    <a href="/admin/orders/<%= order._id %>/invoice" class="invoice-btn" download>
                        <i class="fas fa-file-invoice"></i>
                        Invoice
                    </a>
                    <div class="status-dropdown">
                        <button class="status-dropdown-btn" data-order-id="<%= order._id %>">
                            <i class="fas fa-chevron-down"></i>
                        </button>
                    </div>
                </div>

                <div class="order-details-container">
                    <div class="order-info-section">
                        <div class="order-info-card">
                            <div class="order-number">
                                <h3>Order #<%= order.orderID %></h3>
                                <span class="status-badge status-<%= order.orderStatus.toLowerCase().replace(/\s+/g, '-') %>"><%= order.orderStatus %></span>
                            </div>
                            <div class="order-meta">
                                <div class="meta-item">
                                    <i class="far fa-calendar-alt"></i>
                                    <div class="meta-content">
                                        <div class="meta-label">Added</div>
                                        <div class="meta-value">
                                            <%= new Date(order.createdAt).toLocaleDateString('en-US', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                                        </div>
                                    </div>
                                </div>
                                <div class="meta-item">
                                    <i class="fas fa-credit-card"></i>
                                    <div class="meta-content">
                                        <div class="meta-label">Payment Method</div>
                                        <div class="meta-value"><%= order.paymentMethod %></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="customer-info-card">
                            <h3>Customer</h3>
                            <div class="customer-details">
                                <div class="customer-detail-item">
                                    <i class="fas fa-user"></i>
                                    <div class="detail-content">
                                        <div class="detail-label">Customer</div>
                                        <div class="detail-value"><%= order.user.name %></div>
                                    </div>
                                </div>
                                <div class="customer-detail-item">
                                    <i class="fas fa-envelope"></i>
                                    <div class="detail-content">
                                        <div class="detail-label">Email</div>
                                        <div class="detail-value"><%= order.user.email %></div>
                                    </div>
                                </div>
                                <div class="customer-detail-item">
                                    <i class="fas fa-phone"></i>
                                    <div class="detail-content">
                                        <div class="detail-label">Phone</div>
                                        <div class="detail-value"><%= order.user.mobile || 'N/A' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="address-info-card">
                            <h3>Address</h3>
                            <div class="address-details">
                                <i class="fas fa-map-marker-alt"></i>
                                <div class="address-content">
                                    <div class="address-label">deliver to</div>
                                    <div class="address-value">
                                        <%= order.address.name %>, <%= order.address.address %>, <%= order.address.city %>,
                                        <%= order.address.state %> <%= order.address.pincode %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="order-list-section">
                        <h3>Order List <span class="product-count"><%= order.products.length %> Products</span></h3>
                        <div class="order-products-table">
                            <div class="table-header">
                                <div class="header-product">Product</div>
                                <div class="header-sku"></div>
                                <div class="header-qty"></div>
                                <div class="header-price"></div>
                                <div class="header-total">Total</div>
                            </div>
                            <% order.products.forEach((item, index) => { %>
                                <div class="order-item">
                                  <div class="product-info">
                                    <img src="<%= item.product.images && item.product.images.length > 0 ? item.product.images[0].url : '/placeholder.svg?height=60&width=60' %>" alt="Product" class="product-img">
                                    <div class="product-details">
                                      <div class="product-name"><%= item.product.name %></div>
                                      <div class="product-variant">
                                        Size: <%= item.variant.size %> | 
                                        Color: <%= item.product.color %>
                                      </div>
                                      <div class="product-price">â‚¹<%= item.variant.salePrice %> x <%= item.quantity %></div>
                                    </div>
                                  </div>
                                  <div class="order-item-status">
                                    <span class="status-badge status-<%= item.status.replace(/\s+/g, '-') %>">
                                      <%= item.status.charAt(0).toUpperCase() + item.status.slice(1) %>
                                    </span>
                                    <% if (item.status === 'return pending') { %>
                                      <button 
                                        class="process-return-btn" 
                                        data-order-id="<%= order._id %>" 
                                        data-product-id="<%= item.product._id %>"
                                        data-product-name="<%= item.product.name %>"
                                      >
                                        Process Return
                                      </button>
                                    <% } else if (item.status !== 'cancelled' && item.status !== 'returned') { %>
                                      <button 
                                        class="update-status-btn" 
                                        data-order-id="<%= order._id %>" 
                                        data-product-id="<%= item.product._id %>"
                                        data-current-status="<%= item.status %>"
                                      >
                                        Update Status
                                      </button>
                                    <% } %>
                                  </div>
                                </div>
                              <% }); %>
                            <div class="table-footer">
                                <div class="subtotal-row">
                                    <div class="label">Subtotal</div>
                                    <div class="value">â‚¹<%= orderSummary.subtotal.toFixed(2) %></div>
                                </div>
                                <div class="delivery-row">
                                    <div class="label">delivery charge</div>
                                    <div class="value">â‚¹<%= orderSummary.shippingCost.toFixed(2) %></div>
                                </div>
                                <% if (order.discount && order.discount > 0) { %>
                                    <div class="coupon-row">
                                        <div class="label">
                                            Discount
                                            <span class="coupon-code"><%= orderSummary.couponCode || '' %></span>
                                        </div>
                                        <div class="value discount">-â‚¹<%= order.discount.toFixed(2) %></div>
                                    </div>
                                <% } %>
                                <div class="total-row">
                                    <div class="label">Grand Total</div>
                                    <div class="value grand-total">â‚¹<%= order.finalAmount.toFixed(2) %></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="order-status-section">
                        <h3>Order Status</h3>
                        <div class="status-timeline">
                            <div class="status-item <%= orderStatus.placed ? 'completed' : '' %>">
                                <div class="status-icon">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <div class="status-content">
                                    <div class="status-title">Order Placed</div>
                                    <div class="status-date">
                                        <%= orderStatus.placedDate %>
                                    </div>
                                </div>
                            </div>
                            <div class="status-item <%= orderStatus.processing ? 'completed' : '' %>">
                                <div class="status-icon">
                                    <i class="fas fa-cog"></i>
                                </div>
                                <div class="status-content">
                                    <div class="status-title">Processing</div>
                                    <div class="status-date">
                                        <%= orderStatus.processingDate %>
                                    </div>
                                </div>
                            </div>
                            <div class="status-item <%= orderStatus.shipped ? 'completed' : '' %>">
                                <div class="status-icon">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div class="status-content">
                                    <div class="status-title">Shipped</div>
                                    <div class="status-date">
                                        <%= orderStatus.shippedDate %>
                                    </div>
                                </div>
                            </div>
                            <div class="status-item <%= orderStatus.outForDelivery ? 'completed' : '' %>">
                                <div class="status-icon">
                                    <i class="fas fa-truck"></i>
                                </div>
                                <div class="status-content">
                                    <div class="status-title">Out for Delivery</div>
                                    <div class="status-date">
                                        <%= orderStatus.outForDeliveryDate %>
                                    </div>
                                </div>
                            </div>
                            <div class="status-item <%= orderStatus.delivered ? 'completed' : '' %>">
                                <div class="status-icon">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="status-content">
                                    <div class="status-title">Delivered</div>
                                    <div class="status-date">
                                        <%= orderStatus.deliveredDate %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% if (order.products.some(p => p.status === 'return pending')) { %>
                    <div class="alert alert-warning mt-4">
                        <h5><i class="fas fa-exclamation-triangle me-2"></i> Return Requests Pending</h5>
                        <p>This order has pending return requests that need your attention.</p>
                    </div>
                    <% } %>

                <div class="order-actions-bottom">
                    <a href="/admin/orders" class="go-back-btn">GO Back</a>
                    <% if (order.orderStatus !== 'cancelled') { %>
                        <button class="cancel-order-btn" data-order-id="<%= order._id %>">Cancel Order</button>
                    <% } %>
                </div>
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
        <script src="/js/admin-navbar.js"></script>
        <script src="/js/admin-order-details.js"></script>
    </body>
</html>