<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Add Category</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Bootstrap Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
        />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div
                    class="col-md-3 col-lg-2 d-md-block bg-white shadow-sm p-0"
                    style="height: 100vh"
                >
                    <div class="d-flex flex-column h-100">
                        <div class="p-3 border-bottom">
                            <h4 class="fw-bold">WEARiT</h4>
                        </div>
                        <div class="list-group list-group-flush flex-grow-1">
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-grid-1x2-fill me-2"></i>
                                Dashboard
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-box-seam me-2"></i> Products
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-list-ul me-2"></i> Order List
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-person me-2"></i> Customer
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-currency-dollar me-2"></i> Sales
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action active border-0 py-3"
                            >
                                <i class="bi bi-grid me-2"></i> Category
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-ticket-perforated me-2"></i>
                                Coupons
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-image me-2"></i> Banner
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                        </div>
                        <div class="mt-auto p-3">
                            <button class="btn btn-outline-dark w-100 mb-2">
                                Account
                            </button>
                            <button class="btn btn-dark w-100">Logout</button>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 ms-sm-auto bg-light">
                    <!-- Add Category Content -->
                    <div class="p-4">
                        <h2 class="mb-4">ADD A CATEGORY</h2>

                        <form>
                            <!-- Header Image Upload -->
                            <div class="mb-4">
                                <label class="form-label">Header image</label>
                                <div
                                    class="border rounded bg-white p-5 text-center"
                                >
                                    <div class="mb-3 text-secondary">
                                        <i class="bi bi-image fs-1"></i>
                                    </div>
                                    <p class="text-muted mb-3">
                                        Drag and drop image here, or click add
                                        image
                                    </p>
                                    <button
                                        type="button"
                                        class="btn btn-light bg-light-subtle"
                                    >
                                        Add Image
                                    </button>
                                </div>
                            </div>

                            <!-- Category Offer and Max Redeemable -->
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <label class="form-label"
                                        >category Offer:</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control bg-light"
                                        placeholder=""
                                    />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label"
                                        >Max Redeemable:</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control bg-light"
                                        placeholder=""
                                    />
                                </div>
                            </div>

                            <!-- Category Name -->
                            <div class="mb-4">
                                <label class="form-label">Category Name</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Type category name here..."
                                />
                            </div>

                            <!-- Description -->
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <textarea
                                    class="form-control"
                                    rows="6"
                                    placeholder="Type category description here..."
                                ></textarea>
                            </div>

                            <!-- Should be Listed/Unlisted -->
                            <div class="mb-4">
                                <label class="form-label">Should be</label>
                                <div>
                                    <div class="form-check form-check-inline">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="listingStatus"
                                            id="listed"
                                            value="listed"
                                            checked
                                        />
                                        <label
                                            class="form-check-label"
                                            for="listed"
                                            >Listed</label
                                        >
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input
                                            class="form-check-input"
                                            type="radio"
                                            name="listingStatus"
                                            id="unlisted"
                                            value="unlisted"
                                        />
                                        <label
                                            class="form-check-label"
                                            for="unlisted"
                                            >Unlisted</label
                                        >
                                    </div>
                                </div>
                            </div>

                            <!-- Add Category Button -->
                            <div class="text-end mt-5">
                                <button
                                    type="submit"
                                    class="btn btn-dark px-4 py-2"
                                >
                                    Add Category
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
