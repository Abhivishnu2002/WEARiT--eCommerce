<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Add Category</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Font Awesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <!-- SweetAlert2 CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
        <style>
            body {
                font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f8f9fa;
                overflow-x: hidden;
            }

            /* Sidebar styles */
            .sidebar {
                width: 220px;
                background-color: #ffffff;
                height: 100vh;
                position: fixed;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
                z-index: 1030;
                transition: all 0.3s ease;
            }

            .main-content {
                margin-left: 220px;
                padding: 20px;
                background-color: #f8f9fa;
                transition: all 0.3s ease;
                width: calc(100% - 220px);
            }

            .logo {
                font-weight: 800;
                font-size: 24px;
                padding: 20px;
            }

            .nav-item {
                margin-bottom: 5px;
            }

            .nav-link {
                color: #6c757d;
                padding: 12px 20px;
                border-radius: 5px;
                margin: 0 10px;
                display: flex;
                align-items: center;
            }

            .nav-link i {
                margin-right: 10px;
                width: 20px;
            }

            .nav-link:hover,
            .nav-link.active {
                background-color: #f8f9fa;
                color: #000;
            }

            .nav-link.active {
                font-weight: 600;
            }

            /* Bottom buttons */
            .bottom-buttons {
                position: absolute;
                bottom: 20px;
                width: 100%;
                padding: 0 20px;
            }

            .btn-account {
                width: 100%;
                margin-bottom: 10px;
                border: 1px solid #dee2e6;
                background-color: transparent;
                color: #212529;
            }

            .btn-logout {
                width: 100%;
                background-color: #212529;
                color: #fff;
            }

            /* Form styles */
            .form-card {
                background-color: #fff;
                border-radius: 8px;
                padding: 20px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            }

            .form-label {
                font-weight: 500;
                color: #212529;
                margin-bottom: 8px;
            }

            .form-control {
                border-radius: 4px;
                padding: 10px 15px;
                border: 1px solid #dee2e6;
            }

            .form-control:focus {
                box-shadow: none;
                border-color: #212529;
            }

            .form-text {
                color: #6c757d;
                font-size: 12px;
            }

            /* Image upload area */
            .image-upload-area {
                border: 2px dashed #dee2e6;
                border-radius: 8px;
                padding: 40px 20px;
                text-align: center;
                background-color: #f8f9fa;
                cursor: pointer;
                transition: all 0.3s ease;
            }

            .image-upload-area:hover {
                border-color: #adb5bd;
            }

            .upload-icon {
                font-size: 24px;
                color: #6c757d;
                margin-bottom: 10px;
            }

            .upload-text {
                color: #6c757d;
                margin-bottom: 15px;
            }

            .btn-upload {
                background-color: #e9ecef;
                color: #6c757d;
                border: none;
                padding: 8px 15px;
                border-radius: 4px;
                font-size: 14px;
            }

            /* Radio buttons */
            .form-check-input {
                width: 20px;
                height: 20px;
                margin-top: 2px;
            }

            .form-check-input:checked {
                background-color: #212529;
                border-color: #212529;
            }

            .form-check-label {
                margin-left: 5px;
                font-weight: 500;
            }

            /* Submit button */
            .btn-submit {
                background-color: #212529;
                color: #fff;
                border: none;
                padding: 10px 20px;
                border-radius: 4px;
                font-weight: 500;
            }

            .btn-submit:hover {
                background-color: #000;
            }

            /* Mobile navbar */
            .mobile-nav {
                display: none;
                background-color: #ffffff;
                padding: 15px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                width: 100%;
            }

            .mobile-nav .logo {
                padding: 0;
            }

            /* Responsive styles */
            @media (max-width: 991.98px) {
                .sidebar {
                    transform: translateX(-100%);
                    z-index: 1050;
                }

                .sidebar.show {
                    transform: translateX(0);
                }

                .main-content {
                    margin-left: 0;
                    padding: 15px;
                    width: 100%;
                }

                .mobile-nav {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .bottom-buttons {
                    position: static;
                    padding: 20px;
                }

                .sidebar-overlay {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.5);
                    z-index: 1040;
                    display: none;
                }

                .sidebar-overlay.show {
                    display: block;
                }
            }

            @media (max-width: 767.98px) {
                .form-row {
                    flex-direction: column;
                }

                .form-col {
                    margin-bottom: 15px;
                }
            }
        </style>
    </head>
    <body>
        <!-- Mobile Navigation -->
        <div class="mobile-nav d-lg-none">
            <div class="logo">WEARiT</div>
            <div class="d-flex align-items-center">
                <div class="dropdown me-3">
                    <img
                        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-CzWLpMp95jvKXjnFM6cS4gWAWSGCH2.png"
                        alt="Admin Avatar"
                        class="user-avatar dropdown-toggle"
                        data-bs-toggle="dropdown"
                    />
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/admin/account">Profile</a></li>
                        <li><a class="dropdown-item" href="/admin/changepassword">Change Password</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                    </ul>
                </div>
                <button class="btn btn-light" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <div class="d-flex w-100">
            <!-- Sidebar -->
            <div class="sidebar" id="sidebar">
                <div class="logo d-none d-lg-block">WEARiT</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders">
                            <i class="fas fa-list"></i> Order List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/customer">
                            <i class="fas fa-user"></i> Customer
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/sales">
                            <i class="fas fa-chart-line"></i> Sales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/category">
                            <i class="fas fa-th-large"></i> Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupons">
                            <i class="fas fa-tags"></i> Coupons
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/banner">
                            <i class="fas fa-image"></i> Banner
                        </a>
                    </li>
                </ul>

                <div class="bottom-buttons">
                    <a href="/admin/account" class="btn btn-account">Account</a>
                    <a href="/admin/logout" class="btn btn-logout">Logout</a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <!-- Page Header -->
                <div class="mb-4">
                    <h2 class="fw-bold">ADD A CATEGORY</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin/dashboard" class="text-decoration-none">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="/admin/category" class="text-decoration-none">Categories</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Category</li>
                        </ol>
                    </nav>
                </div>

                <% if (locals.success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (locals.error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <!-- Add Category Form -->
                <form action="/admin/category/add" method="POST" enctype="multipart/form-data" class="form-card p-4">
                    <!-- Header Image Upload -->
                    <div class="mb-4">
                        <label for="headerImage" class="form-label">Header image</label>
                        <div class="image-upload-area" id="headerImageContainer">
                            <i class="fas fa-image upload-icon"></i>
                            <p class="upload-text">
                                Drag and drop image here, or click add image
                            </p>
                            <button type="button" class="btn-upload">
                                Add Image
                            </button>
                        </div>
                        <input type="file" name="headerImage" id="headerImage" class="d-none" accept="image/*">
                        <small class="form-text">Recommended size: 1200x300 pixels. Max file size: 2MB.</small>
                    </div>

                    <!-- Category Offer and Max Redeemable -->
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label for="categoryOffer" class="form-label">Category Offer (%):</label>
                            <input
                                type="number"
                                class="form-control"
                                id="categoryOffer"
                                name="offer"
                                min="0"
                                max="100"
                                placeholder="Enter offer percentage"
                            />
                            <small class="form-text">Leave empty if no offer is available</small>
                        </div>
                        <div class="col-md-6">
                            <label for="maxRedeemable" class="form-label">Max Redeemable (â‚¹):</label>
                            <input
                                type="number"
                                class="form-control"
                                id="maxRedeemable"
                                name="maxRedeemable"
                                min="0"
                                placeholder="Enter maximum redeemable amount"
                            />
                            <small class="form-text">Maximum amount that can be redeemed from this offer</small>
                        </div>
                    </div>

                    <!-- Category Name -->
                    <div class="mb-4">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input
                            type="text"
                            class="form-control"
                            id="categoryName"
                            name="name"
                            placeholder="Type category name here..."
                            required
                        />
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label for="description" class="form-label">Description</label>
                        <textarea
                            class="form-control"
                            id="description"
                            name="description"
                            rows="5"
                            placeholder="Type category description here..."
                        ></textarea>
                    </div>

                    <!-- Should be Listed/Unlisted -->
                    <div class="mb-4">
                        <label class="form-label d-block">Status</label>
                        <div class="form-check form-check-inline">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="isDeleted"
                                id="listed"
                                value="false"
                                checked
                            />
                            <label class="form-check-label" for="listed">Listed</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input
                                class="form-check-input"
                                type="radio"
                                name="isDeleted"
                                id="unlisted"
                                value="true"
                            />
                            <label class="form-check-label" for="unlisted">Unlisted</label>
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-end mt-5">
                        <a href="/admin/category" class="btn btn-secondary me-2">Cancel</a>
                        <button type="submit" class="btn btn-submit">
                            Add Category
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- SweetAlert2 JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

        <script>
            // Sidebar Toggle for Mobile
            document.addEventListener("DOMContentLoaded", function () {
                // Check for flash messages
                 if (locals.success_msg && success_msg.length > 0) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text:  success_msg ,
                        confirmButtonColor: '#000'
                    });
                 } 

                 if (locals.error_msg && error_msg.length > 0) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text:  error_msg ,
                        confirmButtonColor: '#000'
                    });
                 }
                
                const sidebar = document.getElementById("sidebar");
                const sidebarToggle = document.getElementById("sidebarToggle");
                const sidebarOverlay = document.getElementById("sidebarOverlay");

                if (sidebarToggle) {
                    sidebarToggle.addEventListener("click", function () {
                        sidebar.classList.toggle("show");
                        sidebarOverlay.classList.toggle("show");
                        document.body.classList.toggle("overflow-hidden");
                    });
                }

                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener("click", function () {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    });
                }

                // Close sidebar when clicking on a nav link on mobile
                const navLinks = document.querySelectorAll(".sidebar .nav-link");
                navLinks.forEach((link) => {
                    link.addEventListener("click", function () {
                        if (window.innerWidth < 992) {
                            sidebar.classList.remove("show");
                            sidebarOverlay.classList.remove("show");
                            document.body.classList.remove("overflow-hidden");
                        }
                    });
                });

                // Handle window resize
                window.addEventListener("resize", function () {
                    if (window.innerWidth >= 992) {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    }
                });

                // Image upload functionality
                const imageUploadArea = document.getElementById("headerImageContainer");
                const fileInput = document.getElementById("headerImage");

                imageUploadArea.addEventListener("click", function () {
                    fileInput.click();
                });

                fileInput.addEventListener("change", function () {
                    if (fileInput.files && fileInput.files[0]) {
                        const reader = new FileReader();

                        reader.onload = function (e) {
                            imageUploadArea.style.backgroundImage = `url(${e.target.result})`;
                            imageUploadArea.style.backgroundSize = "cover";
                            imageUploadArea.style.backgroundPosition = "center";
                            imageUploadArea.innerHTML = "";
                        };

                        reader.readAsDataURL(fileInput.files[0]);
                    }
                });
                
                // Form validation
                const form = document.querySelector('form');
                form.addEventListener('submit', function(e) {
                    const categoryName = document.getElementById('categoryName').value.trim();
                    
                    if (!categoryName) {
                        e.preventDefault();
                        Swal.fire({
                            icon: 'error',
                            title: 'Validation Error',
                            text: 'Category name is required',
                            confirmButtonColor: '#000'
                        });
                    }
                    
                    const offer = document.getElementById('categoryOffer').value;
                    const maxRedeemable = document.getElementById('maxRedeemable').value;
                    
                    if (offer && !maxRedeemable) {
                        e.preventDefault();
                        Swal.fire({
                            icon: 'error',
                            title: 'Validation Error',
                            text: 'Max redeemable amount is required when offer is provided',
                            confirmButtonColor: '#000'
                        });
                    }
                });
            });
        </script>
    </body>
</html>