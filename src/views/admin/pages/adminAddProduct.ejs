        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- SweetAlert2 JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

        <script>
            // Sidebar Toggle for Mobile
            document.addEventListener("DOMContentLoaded", function () {
                // Check for flash messages
                if (locals.success_msg && success_msg.length > 0) {
                    Swal.fire({
                        icon: "success",
                        title: "Success",
                        text: success_msg,
                        confirmButtonColor: "#000",
                    });
                }

                if (locals.error_msg && error_msg.length > 0) {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: error_msg,
                        confirmButtonColor: "#000",
                    });
                }

                const sidebar = document.getElementById("sidebar");
                const sidebarToggle = document.getElementById("sidebarToggle");
                const sidebarOverlay =
                    document.getElementById("sidebarOverlay");

                if (sidebarToggle) {
                    sidebarToggle.addEventListener("click", function () {
                        sidebar.classList.toggle("show");
                        sidebarOverlay.classList.toggle("show");
                        document.body.classList.toggle("overflow-hidden");
                    });
                }

                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener("click", function () {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    });
                }

                // Close sidebar when clicking on a nav link on mobile
                const navLinks =
                    document.querySelectorAll(".sidebar .nav-link");
                navLinks.forEach((link) => {
                    link.addEventListener("click", function () {
                        if (window.innerWidth < 992) {
                            sidebar.classList.remove("show");
                            sidebarOverlay.classList.remove("show");
                            document.body.classList.remove("overflow-hidden");
                        }
                    });
                });

                // Handle window resize
                window.addEventListener("resize", function () {
                    if (window.innerWidth >= 992) {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    }
                });

                // Image upload functionality
                setupImageUpload(
                    "mainPhotoUpload",
                    "mainImage",
                    "removeMainImage"
                );
                setupImageUpload(
                    "additionalPhoto1Container",
                    "additionalPhoto1",
                    "removeAdditionalPhoto1"
                );
                setupImageUpload(
                    "additionalPhoto2Container",
                    "additionalPhoto2",
                    "removeAdditionalPhoto2"
                );
                setupImageUpload(
                    "additionalPhoto3Container",
                    "additionalPhoto3",
                    "removeAdditionalPhoto3"
                );

                function setupImageUpload(
                    containerId,
                    inputId,
                    removeButtonId
                ) {
                    const container = document.getElementById(containerId);
                    const fileInput = document.getElementById(inputId);
                    const removeButton =
                        document.getElementById(removeButtonId);

                    if (container && fileInput) {
                        // Make sure container click triggers file input
                        container.addEventListener("click", function (e) {
                            // Prevent click if it's on the remove button
                            if (
                                removeButton &&
                                (e.target === removeButton ||
                                    removeButton.contains(e.target))
                            ) {
                                return;
                            }
                            fileInput.click();
                        });

                        // Handle file selection
                        fileInput.addEventListener("change", function () {
                            if (fileInput.files && fileInput.files[0]) {
                                const reader = new FileReader();

                                reader.onload = function (e) {
                                    // Clear container content
                                    container.innerHTML = "";

                                    // Create and add image preview
                                    const img = document.createElement("img");
                                    img.src = e.target.result;
                                    img.className = "image-preview";
                                    img.style.width = "100%";
                                    img.style.height = "100%";
                                    img.style.objectFit = "cover";
                                    img.style.borderRadius = "8px";
                                    container.appendChild(img);

                                    // Show remove button
                                    if (removeButton) {
                                        removeButton.classList.remove("d-none");
                                    }
                                };

                                reader.readAsDataURL(fileInput.files[0]);
                            }
                        });

                        // Remove button functionality
                        if (removeButton) {
                            removeButton.addEventListener(
                                "click",
                                function (e) {
                                    e.stopPropagation(); // Prevent container click

                                    // Reset file input
                                    fileInput.value = "";

                                    // Reset container
                                    container.innerHTML = `
                            <i class="fas fa-image upload-icon"></i>
                            <p class="upload-text">Drag and drop image here, or click add image</p>
                            <button type="button" class="btn-upload">Add Image</button>
                        `;

                                    // Hide remove button
                                    removeButton.classList.add("d-none");
                                }
                            );
                        }

                        // Drag and drop functionality
                        container.addEventListener("dragover", function (e) {
                            e.preventDefault();
                            container.style.borderColor = "#0d6efd";
                        });

                        container.addEventListener("dragleave", function (e) {
                            e.preventDefault();
                            container.style.borderColor = "#dee2e6";
                        });

                        container.addEventListener("drop", function (e) {
                            e.preventDefault();
                            container.style.borderColor = "#dee2e6";

                            if (
                                e.dataTransfer.files &&
                                e.dataTransfer.files[0]
                            ) {
                                fileInput.files = e.dataTransfer.files;

                                const reader = new FileReader();
                                reader.onload = function (e) {
                                    // Clear container content
                                    container.innerHTML = "";

                                    // Create and add image preview
                                    const img = document.createElement("img");
                                    img.src = e.target.result;
                                    img.className = "image-preview";
                                    img.style.width = "100%";
                                    img.style.height = "100%";
                                    img.style.objectFit = "cover";
                                    img.style.borderRadius = "8px";
                                    container.appendChild(img);

                                    // Show remove button
                                    if (removeButton) {
                                        removeButton.classList.remove("d-none");
                                    }
                                };

                                reader.readAsDataURL(e.dataTransfer.files[0]);
                            }
                        });
                    }
                }

                // Add more information fields
                const addInfoBtn = document.getElementById("addInfoBtn");
                const additionalInfoContainer = document.getElementById(
                    "additionalInfoContainer"
                );

                if (addInfoBtn && additionalInfoContainer) {
                    addInfoBtn.addEventListener("click", function () {
                        const newInfoField = document.createElement("div");
                        newInfoField.className = "input-group mb-2";
                        newInfoField.innerHTML = `
                            <input
                                type="text"
                                class="form-control"
                                name="additionalInfo[]"
                                placeholder="Additional information..."
                            />
                            <button type="button" class="btn btn-outline-danger remove-info">
                                <i class="fas fa-times"></i>
                            </button>
                        `;
                        additionalInfoContainer.appendChild(newInfoField);

                        // Add event listener to the remove button
                        const removeBtn =
                            newInfoField.querySelector(".remove-info");
                        removeBtn.addEventListener("click", function () {
                            additionalInfoContainer.removeChild(newInfoField);
                        });
                    });

                    // Add event listeners to existing remove buttons
                    document.querySelectorAll(".remove-info").forEach((btn) => {
                        btn.addEventListener("click", function () {
                            const infoField = this.closest(".input-group");
                            additionalInfoContainer.removeChild(infoField);
                        });
                    });
                }

                // Calculate total stock quantity based on size quantities
                const sizeInputs = document.querySelectorAll(".size-input");
                const stockQuantityInput =
                    document.getElementById("stockQuantity");

                if (sizeInputs.length > 0 && stockQuantityInput) {
                    function updateTotalStock() {
                        let total = 0;
                        sizeInputs.forEach((input) => {
                            total += parseInt(input.value) || 0;
                        });
                        stockQuantityInput.value = total;
                    }

                    sizeInputs.forEach((input) => {
                        input.addEventListener("input", updateTotalStock);
                    });

                    // Initial calculation
                    updateTotalStock();
                }

                // Form validation
                const form = document.getElementById("addProductForm");
                if (form) {
                    form.addEventListener("submit", function (e) {
                        const productName = document
                            .getElementById("productName")
                            .value.trim();
                        const description = document
                            .getElementById("description")
                            .value.trim();
                        const price = document.getElementById("price").value;
                        const category =
                            document.getElementById("category").value;
                        const mainImage =
                            document.getElementById("mainImage").files.length;

                        let isValid = true;
                        let errorMessage = "";

                        if (!productName) {
                            isValid = false;
                            errorMessage = "Product name is required";
                        } else if (!description) {
                            isValid = false;
                            errorMessage = "Product description is required";
                        } else if (!price || price <= 0) {
                            isValid = false;
                            errorMessage = "Valid price is required";
                        } else if (!category) {
                            isValid = false;
                            errorMessage = "Category selection is required";
                        } else if (!mainImage) {
                            isValid = false;
                            errorMessage = "Main product image is required";
                        }

                        if (!isValid) {
                            e.preventDefault();
                            Swal.fire({
                                icon: "error",
                                title: "Validation Error",
                                text: errorMessage,
                                confirmButtonColor: "#000",
                            });
                        }
                    });
                }
            });
        </script>
    </body>
</html>
