<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Product Management</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Font Awesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <!-- SweetAlert2 CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
        <style>
            body {
                font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f8f9fa;
                overflow-x: hidden;
            }

            /* Sidebar styles */
            .sidebar {
                width: 220px;
                background-color: #ffffff;
                height: 100vh;
                position: fixed;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
                z-index: 1030;
                transition: all 0.3s ease;
            }

            .main-content {
                margin-left: 220px;
                padding: 20px;
                background-color: #f8f9fa;
                transition: all 0.3s ease;
                width: calc(100% - 220px);
            }

            .logo {
                font-weight: 800;
                font-size: 24px;
                padding: 20px;
            }

            .nav-item {
                margin-bottom: 5px;
            }

            .nav-link {
                color: #6c757d;
                padding: 12px 20px;
                border-radius: 5px;
                margin: 0 10px;
                display: flex;
                align-items: center;
            }

            .nav-link i {
                margin-right: 10px;
                width: 20px;
            }

            .nav-link:hover,
            .nav-link.active {
                background-color: #f8f9fa;
                color: #000;
            }

            .nav-link.active {
                font-weight: 600;
            }

            /* Bottom buttons */
            .bottom-buttons {
                position: absolute;
                bottom: 20px;
                width: 100%;
                padding: 0 20px;
            }

            .btn-account {
                width: 100%;
                margin-bottom: 10px;
                border: 1px solid #dee2e6;
                background-color: transparent;
                color: #212529;
            }

            .btn-logout {
                width: 100%;
                background-color: #212529;
                color: #fff;
            }

            /* Product table styles */
            .product-table {
                background-color: #fff;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            }

            .product-table th {
                background-color: #000;
                color: #fff;
                font-weight: 500;
                padding: 12px 15px;
            }

            .product-table td {
                padding: 15px;
                vertical-align: middle;
            }

            .product-img {
                width: 60px;
                height: 60px;
                object-fit: cover;
                border-radius: 4px;
            }

            .product-name {
                font-weight: 500;
            }

            .category-badge {
                background-color: #f8f9fa;
                color: #6c757d;
                padding: 5px 10px;
                border-radius: 4px;
                font-size: 12px;
            }

            /* Toggle switch */
            .switch {
                position: relative;
                display: inline-block;
                width: 60px;
                height: 30px;
            }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

            .slider {
                position: absolute;
                cursor: pointer;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                transition: 0.4s;
                border-radius: 34px;
            }

            .slider:before {
                position: absolute;
                content: "";
                height: 22px;
                width: 22px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }

            input:checked + .slider {
                background-color: #f44336;
            }

            input:checked + .slider.green {
                background-color: #4caf50;
            }

            input:checked + .slider:before {
                transform: translateX(30px);
            }

            .switch-label {
                font-size: 12px;
                font-weight: 600;
                text-align: center;
                display: block;
                margin-top: 5px;
            }

            /* Action buttons */
            .action-btn {
                background-color: transparent;
                border: none;
                color: #6c757d;
                padding: 5px;
                margin: 0 3px;
            }

            .action-btn:hover {
                color: #000;
            }

            .delete-btn:hover {
                color: #dc3545;
            }

            /* Offer button */
            .btn-add-offer {
                background-color: #000;
                color: #fff;
                border: none;
                padding: 8px 15px;
                border-radius: 5px;
                font-size: 14px;
            }

            .offer-text {
                font-weight: 600;
                color: #000;
            }

            /* Pagination */
            .pagination .page-item .page-link {
                color: #000;
                border: none;
                width: 35px;
                height: 35px;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 3px;
                border-radius: 5px;
            }

            .pagination .page-item.active .page-link {
                background-color: #000;
                color: #fff;
            }

            /* User profile */
            .user-profile {
                display: flex;
                align-items: center;
                padding: 10px;
                background-color: transparent;
                border-radius: 10px;
            }

            .user-avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
                object-fit: cover;
            }

            .user-info {
                line-height: 1.2;
            }

            .user-name {
                font-weight: 600;
                margin-bottom: 0;
            }

            .user-role {
                color: #6c757d;
                font-size: 12px;
            }

            /* Mobile navbar */
            .mobile-nav {
                display: none;
                background-color: #ffffff;
                padding: 15px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                width: 100%;
            }

            .mobile-nav .logo {
                padding: 0;
            }

            /* Responsive styles */
            @media (max-width: 991.98px) {
                .sidebar {
                    transform: translateX(-100%);
                    z-index: 1050;
                }

                .sidebar.show {
                    transform: translateX(0);
                }

                .main-content {
                    margin-left: 0;
                    padding: 15px;
                    width: 100%;
                }

                .mobile-nav {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .bottom-buttons {
                    position: static;
                    padding: 20px;
                }

                .sidebar-overlay {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.5);
                    z-index: 1040;
                    display: none;
                }

                .sidebar-overlay.show {
                    display: block;
                }

                .product-table {
                    overflow-x: auto;
                }

                .product-filters {
                    flex-direction: column;
                }

                .product-filters > div {
                    margin-bottom: 10px;
                    width: 100%;
                }
            }

            @media (max-width: 767.98px) {
                .breadcrumb-section {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .breadcrumb-section .btn {
                    margin-top: 10px;
                    width: 100%;
                }

                .search-section {
                    flex-direction: column;
                }

                .search-section > div {
                    margin-bottom: 10px;
                    width: 100%;
                }

                .product-table th,
                .product-table td {
                    padding: 10px 8px;
                    font-size: 14px;
                }

                .product-img {
                    width: 50px;
                    height: 50px;
                }

                .switch {
                    width: 50px;
                    height: 25px;
                }

                .slider:before {
                    height: 17px;
                    width: 17px;
                }

                input:checked + .slider:before {
                    transform: translateX(25px);
                }
            }

            @media (max-width: 575.98px) {
                .table-responsive {
                    border: none;
                }

                .pagination .page-item .page-link {
                    width: 30px;
                    height: 30px;
                    font-size: 14px;
                }
            }
        </style>
    </head>
    <body>
        <!-- Mobile Navigation -->
        <div class="mobile-nav d-lg-none">
            <div class="logo">WEARiT</div>
            <div class="d-flex align-items-center">
                <div class="dropdown me-3">
                    <img
                        src="<%= admin.profileImage || 'https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-CzWLpMp95jvKXjnFM6cS4gWAWSGCH2.png' %>"
                        alt="Admin Avatar"
                        class="user-avatar dropdown-toggle"
                        data-bs-toggle="dropdown"
                    />
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/admin/account">Profile</a></li>
                        <li><a class="dropdown-item" href="/admin/changepassword">Change Password</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                    </ul>
                </div>
                <button class="btn btn-light" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <div class="d-flex w-100">
            <!-- Sidebar -->
            <div class="sidebar" id="sidebar">
                <div class="logo d-none d-lg-block">WEARiT</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/products">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders">
                            <i class="fas fa-list"></i> Order List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/customer">
                            <i class="fas fa-user"></i> Customer
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/sales">
                            <i class="fas fa-chart-line"></i> Sales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/category">
                            <i class="fas fa-th-large"></i> Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupons">
                            <i class="fas fa-tags"></i> Coupons
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/banner">
                            <i class="fas fa-image"></i> Banner
                        </a>
                    </li>
                </ul>

                <div class="bottom-buttons">
                    <a href="/admin/account" class="btn btn-account">Account</a>
                    <a href="/admin/logout" class="btn btn-logout">Logout</a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <% if (locals.success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= success_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <% if (locals.error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/admin/dashboard" class="text-decoration-none">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Products
                        </li>
                    </ol>
                </nav>

                <!-- Page Header -->
                <div class="d-flex justify-content-between align-items-center mb-4 breadcrumb-section">
                    <h2 class="mb-0">Products</h2>
                    <a href="/admin/addproducts" class="btn btn-dark">
                        Add New Product <i class="fas fa-plus ms-2"></i>
                    </a>
                </div>

                <!-- Search and Filters -->
                <form action="/admin/products" method="GET" id="searchForm">
                    <div class="d-flex justify-content-between align-items-center mb-4 search-section">
                        <div class="input-group" style="max-width: 400px">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fas fa-search text-muted"></i>
                            </span>
                            <input
                                type="text"
                                class="form-control border-start-0"
                                placeholder="Search product..."
                                name="search"
                                value="<%= searchQuery || '' %>"
                            />
                        </div>

                        <div class="d-flex align-items-center">
                            <button type="submit" class="btn btn-dark">Search</button>
                        </div>
                    </div>

                    <!-- Filters -->
                    <div class="d-flex justify-content-between align-items-center mb-4 product-filters">
                        <div class="d-flex">
                            <div class="me-2">
                                <span class="me-2">Filter By</span>
                            </div>
                            <div class="dropdown me-2">
                                <select 
                                    class="form-select" 
                                    name="category" 
                                    onchange="document.getElementById('searchForm').submit();"
                                >
                                    <option value="" <%= !category ? 'selected' : '' %>>All Categories</option>
                                    <% if (categories && categories.length > 0) { %>
                                        <% categories.forEach(cat => { %>
                                            <option value="<%= cat._id %>" <%= category === cat._id.toString() ? 'selected' : '' %>>
                                                <%= cat.name %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="dropdown">
                                <select 
                                    class="form-select" 
                                    name="priceRange" 
                                    onchange="document.getElementById('searchForm').submit();"
                                >
                                    <option value="" <%= !priceRange ? 'selected' : '' %>>All Prices</option>
                                    <option value="0-500" <%= priceRange === '0-500' ? 'selected' : '' %>>Under ₹500</option>
                                    <option value="500-1000" <%= priceRange === '500-1000' ? 'selected' : '' %>>₹500 - ₹1000</option>
                                    <option value="1000-5000" <%= priceRange === '1000-5000' ? 'selected' : '' %>>₹1000 - ₹5000</option>
                                    <option value="5000+" <%= priceRange === '5000+' ? 'selected' : '' %>>Over ₹5000</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex">
                            <div class="me-2">
                                <span class="me-2">Sort</span>
                            </div>
                            <div class="btn-group" role="group">
                                <button
                                    type="button"
                                    class="btn btn-outline-secondary <%= sortBy === 'price' && sortOrder === 'desc' ? 'active' : '' %>"
                                    onclick="location.href='/admin/products?<%= new URLSearchParams({ ...query, sortBy: 'price', sortOrder: 'desc' }).toString() %>'"
                                >
                                    Price High-Low
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-outline-secondary <%= sortBy === 'price' && sortOrder === 'asc' ? 'active' : '' %>"
                                    onclick="location.href='/admin/products?<%= new URLSearchParams({ ...query, sortBy: 'price', sortOrder: 'asc' }).toString() %>'"
                                >
                                    Price Low-High
                                </button>
                                <button
                                    type="button"
                                    class="btn btn-outline-secondary <%= sortBy === 'createdAt' && sortOrder === 'desc' ? 'active' : '' %>"
                                    onclick="location.href='/admin/products?<%= new URLSearchParams({ ...query, sortBy: 'createdAt', sortOrder: 'desc' }).toString() %>'"
                                >
                                    Last added first
                                </button>
                            </div>
                        </div>
                    </div>
                </form>

                <!-- Product Table -->
                <div class="table-responsive product-table mb-4">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>List</th>
                                <th>Action</th>
                                <th>Offer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (products && products.length > 0) { %>
                                <% products.forEach(product => { %>
                                    <tr>
                                        <td>
                                            <img
                                                src="<%= product.images && product.images.length > 0 ? product.images[0] : 'https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-CzWLpMp95jvKXjnFM6cS4gWAWSGCH2.png' %>"
                                                alt="<%= product.name %>"
                                                class="product-img"
                                            />
                                        </td>
                                        <td class="product-name">
                                            <%= product.name %>
                                        </td>
                                        <td>
                                            <span class="category-badge">
                                                <%= product.category ? product.category.name : 'Uncategorized' %>
                                            </span>
                                        </td>
                                        <td>₹ <%= product.price.toFixed(2) %></td>
                                        <td><%= product.stockQuantity || 0 %></td>
                                        <td>
                                            <form 
                                                action="/admin/products/<%= product._id %>/toggle-status" 
                                                method="POST" 
                                                class="toggle-form"
                                                data-product-id="<%= product._id %>"
                                            >
                                                <label class="switch">
                                                    <input 
                                                        type="checkbox" 
                                                        <%= !product.isDeleted ? 'checked' : '' %> 
                                                        class="status-toggle"
                                                        data-product-id="<%= product._id %>"
                                                    />
                                                    <span class="slider <%= !product.isDeleted ? 'green' : '' %>"></span>
                                                </label>
                                                <span class="switch-label"><%= product.isDeleted ? 'LIST' : 'UNLIST' %></span>
                                            </form>
                                        </td>
                                        <td>
                                            <a href="/admin/products/edit/<%= product._id %>" class="action-btn">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button 
                                                class="action-btn delete-btn" 
                                                data-product-id="<%= product._id %>"
                                                data-product-name="<%= product.name %>"
                                            >
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                        <td>
                                            <% if (product.offer && product.offer > 0) { %>
                                                <div class="offer-text"><%= product.offer %>% Off</div>
                                            <% } else { %>
                                                <button 
                                                    class="btn-add-offer add-offer-btn" 
                                                    data-product-id="<%= product._id %>"
                                                    data-product-name="<%= product.name %>"
                                                >
                                                    Add Offer
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center py-4">No products found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (products && products.length > 0) { %>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-0">
                                Showing <%= (currentPage - 1) * limit + 1 %>-<%= Math.min(currentPage * limit, totalProducts) %> from <%= totalProducts %>
                            </p>
                        </div>
                        <% if (totalPages > 1) { %>
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                        <a
                                            class="page-link"
                                            href="/admin/products?<%= new URLSearchParams({...query, page: currentPage - 1}).toString() %>"
                                            aria-label="Previous"
                                        >
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    
                                    <% 
                                    let startPage = Math.max(1, currentPage - 2);
                                    let endPage = Math.min(totalPages, startPage + 4);
                                    
                                    if (endPage - startPage < 4) {
                                        startPage = Math.max(1, endPage - 4);
                                    }
                                    
                                    for (let i = startPage; i <= endPage; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a 
                                                class="page-link" 
                                                href="/admin/products?<%= new URLSearchParams({...query, page: i}).toString() %>"
                                            >
                                                <%= i %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <% if (endPage < totalPages) { %>
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#">...</a>
                                        </li>
                                        <li class="page-item">
                                            <a 
                                                class="page-link" 
                                                href="/admin/products?<%= new URLSearchParams({...query, page: totalPages}).toString() %>"
                                            >
                                                <%= totalPages %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                        <a
                                            class="page-link"
                                            href="/admin/products?<%= new URLSearchParams({...query, page: currentPage + 1}).toString() %>"
                                            aria-label="Next"
                                        >
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Add Offer Modal -->
        <div class="modal fade" id="addOfferModal" tabindex="-1" aria-labelledby="addOfferModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addOfferModalLabel">Add Offer</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form id="addOfferForm" action="/admin/products/add-offer" method="POST">
                        <div class="modal-body">
                            <input type="hidden" name="productId" id="offerProductId">
                            <div class="mb-3">
                                <label for="productName" class="form-label">Product</label>
                                <input type="text" class="form-control" id="offerProductName" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="offerPercentage" class="form-label">Offer Percentage (%)</label>
                                <input type="number" class="form-control" id="offerPercentage" name="offer" min="1" max="99" required>
                                <small class="form-text text-muted">Enter a value between 1 and 99</small>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-dark">Add Offer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- SweetAlert2 JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

        <script>
            // Sidebar Toggle for Mobile
            document.addEventListener("DOMContentLoaded", function () {
                // Check for flash messages
                 if (locals.success_msg && success_msg.length > 0) { 
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text:  success_msg,
                        confirmButtonColor: '#000'
                    });
                 } 

                 if (locals.error_msg && error_msg.length > 0) { 
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text:  error_msg ,
                        confirmButtonColor: '#000'
                    });
                }
                
                const sidebar = document.getElementById("sidebar");
                const sidebarToggle = document.getElementById("sidebarToggle");
                const sidebarOverlay = document.getElementById("sidebarOverlay");

                if (sidebarToggle) {
                    sidebarToggle.addEventListener("click", function () {
                        sidebar.classList.toggle("show");
                        sidebarOverlay.classList.toggle("show");
                        document.body.classList.toggle("overflow-hidden");
                    });
                }

                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener("click", function () {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    });
                }

                // Close sidebar when clicking on a nav link on mobile
                const navLinks = document.querySelectorAll(".sidebar .nav-link");
                navLinks.forEach((link) => {
                    link.addEventListener("click", function () {
                        if (window.innerWidth < 992) {
                            sidebar.classList.remove("show");
                            sidebarOverlay.classList.remove("show");
                            document.body.classList.remove("overflow-hidden");
                        }
                    });
                });

                // Handle window resize
                window.addEventListener("resize", function () {
                    if (window.innerWidth >= 992) {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    }
                });

                // Product status toggle
                const statusToggles = document.querySelectorAll('.status-toggle');
                statusToggles.forEach(toggle => {
                    toggle.addEventListener('change', function() {
                        const productId = this.dataset.productId;
                        const form = document.querySelector(`.toggle-form[data-product-id="${productId}"]`);
                        
                        Swal.fire({
                            title: this.checked ? 'List Product?' : 'Unlist Product?',
                            text: this.checked ? 'This product will be visible to customers' : 'This product will be hidden from customers',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#000',
                            cancelButtonColor: '#6c757d',
                            confirmButtonText: this.checked ? 'Yes, list it!' : 'Yes, unlist it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                            } else {
                                // Reset the toggle if action was cancelled
                                this.checked = !this.checked;
                            }
                        });
                    });
                });

                // Delete product
                const deleteButtons = document.querySelectorAll('.delete-btn');
                deleteButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const productId = this.dataset.productId;
                        const productName = this.dataset.productName;
                        
                        Swal.fire({
                            title: 'Are you sure?',
                            text: `You are about to delete "${productName}". This action cannot be undone!`,
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#dc3545',
                            cancelButtonColor: '#6c757d',
                            confirmButtonText: 'Yes, delete it!'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                window.location.href = `/admin/products/delete/${productId}`;
                            }
                        });
                    });
                });

                // Add offer modal
                const addOfferButtons = document.querySelectorAll('.add-offer-btn');
                const addOfferModal = new bootstrap.Modal(document.getElementById('addOfferModal'));
                
                addOfferButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const productId = this.dataset.productId;
                        const productName = this.dataset.productName;
                        
                        document.getElementById('offerProductId').value = productId;
                        document.getElementById('offerProductName').value = productName;
                        
                        addOfferModal.show();
                    });
                });

                // Offer form validation
                const addOfferForm = document.getElementById('addOfferForm');
                if (addOfferForm) {
                    addOfferForm.addEventListener('submit', function(e) {
                        const offerPercentage = document.getElementById('offerPercentage').value;
                        
                        if (!offerPercentage || offerPercentage < 1 || offerPercentage > 99) {
                            e.preventDefault();
                            Swal.fire({
                                icon: 'error',
                                title: 'Validation Error',
                                text: 'Offer percentage must be between 1 and 99',
                                confirmButtonColor: '#000'
                            });
                        }
                    });
                }
            });
        </script>
    </body>
</html>