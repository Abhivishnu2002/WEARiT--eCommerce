<!DOCTYPE html><html lang="en">    <head>        <meta charset="UTF-8" />        <meta name="viewport" content="width=device-width, initial-scale=1.0" />        <title>WEARiT - Product Management</title>        <link            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"            rel="stylesheet"        />        <link rel="preconnect" href="https://fonts.googleapis.com">        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">        <link            rel="stylesheet"            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"        />        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">        <link rel="stylesheet" href="/css/admin-navbar.css">        <link rel="stylesheet" href="/css/admin-products.css">    </head>    <body>        <%- include('../partials/navbar', {activePage: 'products'}) %>        <main class="admin-main">            <div class="admin-content">                <% if (locals.success_msg && success_msg.length > 0) { %>                    <div class="alert alert-success alert-dismissible fade show" role="alert">                        <%= success_msg %>                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>                    </div>                <% } %>                <% if (locals.error_msg && error_msg.length > 0) { %>                    <div class="alert alert-danger alert-dismissible fade show" role="alert">                        <%= error_msg %>                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>                    </div>                <% } %>                <nav aria-label="breadcrumb" class="mb-4">                    <ol class="breadcrumb">                        <li class="breadcrumb-item">                            <a href="/admin/dashboard" class="text-decoration-none">Dashboard</a>                        </li>                        <li class="breadcrumb-item active" aria-current="page">                            Products                        </li>                    </ol>                </nav>                <div class="breadcrumb-section">                    <h2 class="mb-0">Products</h2>                    <a href="/admin/addproducts" class="btn btn-primary">                        Add New Product <i class="fas fa-plus ms-2"></i>                    </a>                </div>                <form action="/admin/products" method="GET" id="searchForm">                    <div class="d-flex justify-content-between align-items-center mb-4 search-section">                        <div class="input-group" style="max-width: 400px">                            <span class="input-group-text bg-white border-end-0">                                <i class="fas fa-search text-muted"></i>                            </span>                            <input                                type="text"                                class="form-control border-start-0"                                placeholder="Search product..."                                name="search"                                value="<%= searchQuery || '' %>"                            />                        </div>                        <div class="d-flex align-items-center ">                            <button type="submit" class="btn btn-primary">Search</button>                        </div>                    </div>                    <div class="d-flex justify-content-between align-items-center mb-4 product-filters">                        <div class="d-flex">                            <div class="dropdown me-2">                                <select                                    class="form-select"                                    name="category"                                    onchange="document.getElementById('searchForm').submit();"                                >                                    <option value="" <%= !category ? 'selected' : '' %>>All Categories</option>                                    <% if (categories && categories.length > 0) { %>                                        <% categories.forEach(cat => { %>                                            <option value="<%= cat._id %>" <%= category === cat._id.toString() ? 'selected' : '' %>>                                                <%= cat.name %>                                            </option>                                        <% }); %>                                    <% } %>                                </select>                            </div>                            <div class="dropdown me-2">                                <select                                    class="form-select"                                    name="isActive"                                    onchange="document.getElementById('searchForm').submit();"                                >                                    <option value="" <%= !query.isActive ? 'selected' : '' %>>All Status</option>                                    <option value="true" <%= query.isActive === 'true' ? 'selected' : '' %>>Listed Only</option>                                    <option value="false" <%= query.isActive === 'false' ? 'selected' : '' %>>Unlisted Only</option>                                </select>                            </div>                            <div class="dropdown">                                <select                                    class="form-select"                                    name="priceRange"                                    onchange="document.getElementById('searchForm').submit();"                                >                                    <option value="" <%= !priceRange ? 'selected' : '' %>>All Prices</option>                                    <option value="0-500" <%= priceRange === '0-500' ? 'selected' : '' %>>Under ₹500</option>                                    <option value="500-1000" <%= priceRange === '500-1000' ? 'selected' : '' %>>₹500 - ₹1000</option>                                    <option value="1000-5000" <%= priceRange === '1000-5000' ? 'selected' : '' %>>₹1000 - ₹5000</option>                                    <option value="5000+" <%= priceRange === '5000+' ? 'selected' : '' %>>Over ₹5000</option>                                </select>                            </div>                        </div>                        <div class="d-flex">                            <div class="btn-group" role="group">                                <button                                    type="button"                                    class="btn btn-outline-secondary <%= sortBy === 'price' && sortOrder === 'desc' ? 'active' : '' %>"                                    onclick="location.href='/admin/products?<%= new URLSearchParams({...query, sortBy: 'price', sortOrder: 'desc'}).toString() %>'"                                >                                    Price High-Low                                </button>                                <button                                    type="button"                                    class="btn btn-outline-secondary <%= sortBy === 'price' && sortOrder === 'asc' ? 'active' : '' %>"                                    onclick="location.href='/admin/products?<%= new URLSearchParams({...query, sortBy: 'price', sortOrder: 'asc'}).toString() %>'"                                >                                    Price Low-High                                </button>                                <button                                    type="button"                                    class="btn btn-outline-secondary <%= sortBy === 'createdAt' && sortOrder === 'desc' ? 'active' : '' %>"                                    onclick="location.href='/admin/products?<%= new URLSearchParams({...query, sortBy: 'createdAt', sortOrder: 'desc'}).toString() %>'"                                >                                    Last added first                                </button>                            </div>                        </div>                    </div>                </form>                <div class="product-table-container">                    <div class="table-responsive product-table mb-4">                        <table class="table table-hover mb-0">                            <thead>                                <tr>                                    <th>Image</th>                                    <th>Product Name</th>                                    <th>Category</th>                                    <th>Price</th>                                    <th>Stock</th>                                    <th>List</th>                                    <th>Action</th>                                    <th>Offer</th>                                </tr>                            </thead>                            <tbody>                                <% if (products && products.length > 0) { %>                                    <% products.forEach(product => { %>                                        <tr>                                            <td>                                                <img                                                    src="<%= product.images && product.images.length > 0 ? product.images[0].url : 'https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-CzWLpMp95jvKXjnFM6cS4gWAWSGCH2.png' %>"                                                    alt="<%= product.name %>"                                                    class="product-img"                                                />                                            </td>                                            <td class="product-name">                                                <%= product.name %>                                            </td>                                            <td>                                                <span class="category-badge">                                                    <%= product.categoryId ? product.categoryId.name : 'Uncategorized' %>                                                </span>                                            </td>                                            <td>₹ <%= product.variants && product.variants.length > 0 ? product.variants[0].varientPrice.toFixed(2) : '0.00' %></td>                                            <td>                                                <%                                                let totalStock = 0;                                                if (product.variants && product.variants.length > 0) {                                                    product.variants.forEach(variant => {                                                        totalStock += variant.varientquatity || 0;                                                    });                                                }                                                %>                                                <%= totalStock %>                                            </td>                                            <td>                                                <label class="switch">                                                    <input                                                        type="checkbox"                                                        <%= product.isActive ? 'checked' : '' %>                                                        class="status-toggle"                                                        data-product-id="<%= product._id %>"                                                    />                                                    <span class="slider <%= product.isActive ? 'green' : '' %>"></span>                                                </label>                                                <span class="switch-label"><%= product.isActive ? 'LISTED' : 'UNLISTED' %></span>                                            </td>                                            <td>                                                <a href="/admin/editproducts?id=<%= product._id %>" class="action-btn">                                                    <i class="fas fa-edit"></i>                                                </a>                                                <button                                                    class="action-btn delete-btn"                                                    data-product-id="<%= product._id %>"                                                    data-product-name="<%= product.name %>"                                                >                                                    <i class="fas fa-trash"></i>                                                </button>                                            </td>                                            <td>                                                <% if (product.offer && product.offer > 0) { %>                                                    <div class="offer-text"><%= product.offer %>% Off</div>                                                <% } else { %>                                                    <button                                                        class="btn-add-offer add-offer-btn"                                                        data-product-id="<%= product._id %>"                                                        data-product-name="<%= product.name %>"                                                    >                                                        Add Offer                                                    </button>                                                <% } %>                                            </td>                                        </tr>                                    <% }); %>                                <% } else { %>                                    <tr>                                        <td colspan="8" class="text-center py-4">No products found</td>                                    </tr>                                <% } %>                            </tbody>                        </table>                    </div>                </div>                <div class="product-cards-container">                    <% if (products && products.length > 0) { %>                        <% products.forEach(product => { %>                            <div class="product-card">                                <div class="product-card-header">                                    <img                                        src="<%= product.images && product.images.length > 0 ? product.images[0].url : 'https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-CzWLpMp95jvKXjnFM6cS4gWAWSGCH2.png' %>"                                        alt="<%= product.name %>"                                        class="product-card-image"                                    />                                    <div>                                        <div class="product-card-title"><%= product.name %></div>                                        <div class="product-card-category">                                            <%= product.categoryId ? product.categoryId.name : 'Uncategorized' %>                                        </div>                                    </div>                                </div>                                <div class="product-card-body">                                    <div class="product-card-row">                                        <span class="product-card-label">Price:</span>                                        <span class="product-card-value">₹<%= product.variants && product.variants.length > 0 ? product.variants[0].varientPrice.toFixed(2) : '0.00' %></span>                                    </div>                                    <div class="product-card-row">                                        <span class="product-card-label">Stock:</span>                                        <span class="product-card-value">                                            <%                                            let totalStock = 0;                                            if (product.variants && product.variants.length > 0) {                                                product.variants.forEach(variant => {                                                    totalStock += variant.varientquatity || 0;                                                });                                            }                                            %>                                            <%= totalStock %>                                        </span>                                    </div>                                    <div class="product-card-row">                                        <span class="product-card-label">Status:</span>                                        <span class="product-card-value">                                            <span class="badge bg-<%= product.isActive ? 'success' : 'danger' %>">                                                <%= product.isActive ? 'Listed' : 'Unlisted' %>                                            </span>                                        </span>                                    </div>                                    <div class="product-card-row">                                        <span class="product-card-label">Offer:</span>                                        <span class="product-card-value">                                            <% if (product.offer && product.offer > 0) { %>                                                <span class="offer-text"><%= product.offer %>% Off</span>                                            <% } else { %>                                                <span class="text-muted">No offer</span>                                            <% } %>                                        </span>                                    </div>                                </div>                                <div class="product-card-actions">                                    <div class="product-card-toggle">                                        <label class="switch">                                            <input                                                type="checkbox"                                                <%= product.isActive ? 'checked' : '' %>                                                class="status-toggle"                                                data-product-id="<%= product._id %>"                                            />                                            <span class="slider <%= product.isActive ? 'green' : '' %>"></span>                                        </label>                                        <span class="switch-label"><%= product.isActive ? 'LISTED' : 'UNLISTED' %></span>                                    </div>                                    <div class="product-card-buttons">                                        <a href="/admin/editproducts?id=<%= product._id %>" class="btn btn-sm btn-primary">                                            <i class="fas fa-edit me-1"></i> Edit                                        </a>                                        <button                                            class="btn btn-sm btn-danger delete-btn"                                            data-product-id="<%= product._id %>"                                            data-product-name="<%= product.name %>"                                        >                                            <i class="fas fa-trash me-1"></i> Delete                                        </button>                                        <% if (product.offer && product.offer > 0) { %>                                            <span class="btn btn-sm btn-success disabled">                                                <i class="fas fa-tag me-1"></i> <%= product.offer %>% Off                                            </span>                                        <% } else { %>                                            <button                                                class="btn btn-sm btn-outline-primary add-offer-btn"                                                data-product-id="<%= product._id %>"                                                data-product-name="<%= product.name %>"                                            >                                                <i class="fas fa-plus me-1"></i> Add Offer                                            </button>                                        <% } %>                                    </div>                                </div>                            </div>                        <% }); %>                    <% } else { %>                        <div class="text-center py-5">                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>                            <h5 class="text-muted">No Products Found</h5>                            <p class="text-muted">No products match your current filter criteria.</p>                            <a href="/admin/products" class="btn btn-primary">                                <i class="fas fa-sync-alt me-2"></i>Reset Filters                            </a>                        </div>                    <% } %>                </div>                <% if (products && products.length > 0) { %>                    <div class="d-flex justify-content-between align-items-center">                        <div>                            <p class="text-muted mb-0">                                Showing <%= (currentPage - 1) * limit + 1 %>-<%= Math.min(currentPage * limit, totalProducts) %> from <%= totalProducts %>                            </p>                        </div>                        <% if (totalPages > 1) { %>                            <nav aria-label="Page navigation">                                <ul class="pagination mb-0">                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">                                        <a                                            class="page-link"                                            href="/admin/products?<%= new URLSearchParams({...query, page: currentPage - 1}).toString() %>"                                            aria-label="Previous"                                        >                                            <i class="fas fa-chevron-left"></i>                                        </a>                                    </li>                                    <%                                    let startPage = Math.max(1, currentPage - 2);                                    let endPage = Math.min(totalPages, startPage + 4);                                    if (endPage - startPage < 4) {                                        startPage = Math.max(1, endPage - 4);                                    }                                    for (let i = startPage; i <= endPage; i++) { %>                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">                                            <a                                                class="page-link"                                                href="/admin/products?<%= new URLSearchParams({...query, page: i}).toString() %>"                                            >                                                <%= i %>                                            </a>                                        </li>                                    <% } %>                                    <% if (endPage < totalPages) { %>                                        <li class="page-item disabled">                                            <a class="page-link" href="#">...</a>                                        </li>                                        <li class="page-item">                                            <a                                                class="page-link"                                                href="/admin/products?<%= new URLSearchParams({...query, page: totalPages}).toString() %>"                                            >                                                <%= totalPages %>                                            </a>                                        </li>                                    <% } %>                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">                                        <a                                            class="page-link"                                            href="/admin/products?<%= new URLSearchParams({...query, page: currentPage + 1}).toString() %>"                                            aria-label="Next"                                        >                                            <i class="fas fa-chevron-right"></i>                                        </a>                                    </li>                                </ul>                            </nav>                        <% } %>                    </div>                <% } %>            </div>        </main>        <div class="modal fade" id="addOfferModal" tabindex="-1" aria-labelledby="addOfferModalLabel" aria-hidden="true">            <div class="modal-dialog">                <div class="modal-content">                    <div class="modal-header">                        <h5 class="modal-title" id="addOfferModalLabel">Add Offer</h5>                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>                    </div>                    <form id="addOfferForm" action="/admin/update-product-offer" method="post">                        <div class="modal-body">                            <input type="hidden" name="productId" id="offerProductId">                            <div class="mb-3">                                <label for="productName" class="form-label">Product</label>                                <input type="text" class="form-control" id="offerProductName" readonly>                            </div>                            <div class="mb-3">                                <label for="offerPercentage" class="form-label">Offer Percentage (%)</label>                                <input type="number" class="form-control" id="offerPercentage" name="offer">                                <small class="form-text text-muted">Enter a value between 1 and 99</small>                            </div>                        </div>                        <div class="modal-footer">                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>                            <button type="submit" class="btn btn-primary">Add Offer</button>                        </div>                    </form>                </div>            </div>        </div>        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>        <script src="/js/admin-navbar.js"></script>        <script src="/js/admin-products.js"></script>    </body></html>