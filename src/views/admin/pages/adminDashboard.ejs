<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT Dashboard</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Bootstrap Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
        />
        <!-- Chart.js -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div
                    class="col-md-3 col-lg-2 d-md-block bg-white shadow-sm p-0"
                    style="height: 100vh"
                >
                    <div class="d-flex flex-column h-100">
                        <div class="p-3 border-bottom">
                            <h4 class="fw-bold">WEARiT</h4>
                        </div>
                        <div class="list-group list-group-flush flex-grow-1">
                            <a
                                href="#"
                                class="list-group-item list-group-item-action active border-0 py-3"
                            >
                                <i class="bi bi-grid-1x2-fill me-2"></i>
                                Dashboard
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-box-seam me-2"></i> Products
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-list-ul me-2"></i> Order List
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-person me-2"></i> Customer
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-currency-dollar me-2"></i> Sales
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-grid me-2"></i> Category
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-ticket-perforated me-2"></i>
                                Coupons
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-image me-2"></i> Banner
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                        </div>
                        <div class="mt-auto p-3">
                            <button class="btn btn-outline-dark w-100 mb-2">
                                Account
                            </button>
                            <button class="btn btn-dark w-100">Logout</button>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 ms-sm-auto bg-light">
                    <!-- Header - Simplified without admin profile -->
                    <div class="bg-white p-3 shadow-sm">
                        <!-- Empty header, admin profile removed -->
                    </div>

                    <!-- Dashboard Content -->
                    <div class="p-4">
                        <!-- Stats Cards -->
                        <div class="row g-4 mb-4">
                            <!-- Total Customers -->
                            <div class="col-md-6 col-lg-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body d-flex">
                                        <div
                                            class="bg-success bg-opacity-10 p-3 rounded-circle d-flex align-items-center justify-content-center me-3"
                                            style="width: 60px; height: 60px"
                                        >
                                            <i
                                                class="bi bi-people text-success fs-4"
                                            ></i>
                                        </div>
                                        <div>
                                            <div class="text-muted">
                                                Total Customers
                                            </div>
                                            <h3 class="mb-0">5,423</h3>
                                            <div class="text-success small">
                                                16% this month
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Total Orders -->
                            <div class="col-md-6 col-lg-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body d-flex">
                                        <div
                                            class="bg-success bg-opacity-10 p-3 rounded-circle d-flex align-items-center justify-content-center me-3"
                                            style="width: 60px; height: 60px"
                                        >
                                            <i
                                                class="bi bi-truck text-success fs-4"
                                            ></i>
                                        </div>
                                        <div>
                                            <div class="text-muted">
                                                Total Orders
                                            </div>
                                            <h3 class="mb-0">1,893</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Total Sales -->
                            <div class="col-md-6 col-lg-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body d-flex">
                                        <div
                                            class="bg-success bg-opacity-10 p-3 rounded-circle d-flex align-items-center justify-content-center me-3"
                                            style="width: 60px; height: 60px"
                                        >
                                            <i
                                                class="bi bi-currency-dollar text-success fs-4"
                                            ></i>
                                        </div>
                                        <div>
                                            <div class="text-muted">
                                                Total Sales
                                            </div>
                                            <h3 class="mb-0">₹65,805</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Total Pending -->
                            <div class="col-md-6 col-lg-3">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body d-flex">
                                        <div
                                            class="bg-success bg-opacity-10 p-3 rounded-circle d-flex align-items-center justify-content-center me-3"
                                            style="width: 60px; height: 60px"
                                        >
                                            <i
                                                class="bi bi-clock text-success fs-4"
                                            ></i>
                                        </div>
                                        <div>
                                            <div class="text-muted">
                                                Total Pending
                                            </div>
                                            <h3 class="mb-0">189</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sales Details -->
                        <h4 class="mb-4">Sales Details</h4>

                        <div class="row g-4">
                            <!-- Chart - Fixed to prevent overflow -->
                            <div class="col-lg-8">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div
                                            class="d-flex justify-content-between mb-4"
                                        >
                                            <h5 class="card-title">Activity</h5>
                                            <div class="dropdown">
                                                <button
                                                    class="btn btn-light dropdown-toggle"
                                                    type="button"
                                                    id="timeDropdown"
                                                    data-bs-toggle="dropdown"
                                                    aria-expanded="false"
                                                >
                                                    Month
                                                </button>
                                                <ul
                                                    class="dropdown-menu"
                                                    aria-labelledby="timeDropdown"
                                                >
                                                    <li>
                                                        <a
                                                            class="dropdown-item"
                                                            href="#"
                                                            >Week</a
                                                        >
                                                    </li>
                                                    <li>
                                                        <a
                                                            class="dropdown-item"
                                                            href="#"
                                                            >Month</a
                                                        >
                                                    </li>
                                                    <li>
                                                        <a
                                                            class="dropdown-item"
                                                            href="#"
                                                            >Year</a
                                                        >
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <!-- Fixed height container for chart -->
                                        <div style="height: 300px; width: 100%">
                                            <canvas id="salesChart"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sales Progress -->
                            <div class="col-lg-4">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body">
                                        <div
                                            class="d-flex justify-content-between align-items-center mb-3"
                                        >
                                            <h5 class="card-title">
                                                Sales Progress
                                            </h5>
                                            <i
                                                class="bi bi-three-dots-vertical"
                                            ></i>
                                        </div>
                                        <div class="text-muted mb-3">
                                            This Quarter
                                        </div>

                                        <div class="text-center my-4">
                                            <div
                                                class="position-relative d-inline-block"
                                            >
                                                <canvas
                                                    id="progressChart"
                                                    width="150"
                                                    height="150"
                                                ></canvas>
                                                <div
                                                    class="position-absolute top-50 start-50 translate-middle text-center"
                                                >
                                                    <h3 class="mb-0">75.55%</h3>
                                                    <div class="text-success">
                                                        +10%
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="text-center mb-3">
                                            You succeed earn ₹28963 today, its
                                            higher than yesterday
                                        </div>

                                        <div class="row text-center g-3 mt-3">
                                            <div class="col-4">
                                                <div class="text-muted small">
                                                    Target
                                                </div>
                                                <div>
                                                    ₹30k
                                                    <i
                                                        class="bi bi-arrow-down-short text-danger"
                                                    ></i>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-muted small">
                                                    Revenue
                                                </div>
                                                <div>
                                                    ₹16k
                                                    <i
                                                        class="bi bi-arrow-up-short text-success"
                                                    ></i>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="text-muted small">
                                                    Today
                                                </div>
                                                <div>
                                                    ₹28k
                                                    <i
                                                        class="bi bi-arrow-up-short text-success"
                                                    ></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script>
            // Initialize charts when the document is ready
            document.addEventListener("DOMContentLoaded", function () {
                // Sales Chart - Fixed configuration to prevent overflow
                const salesCtx = document
                    .getElementById("salesChart")
                    .getContext("2d");
                const salesChart = new Chart(salesCtx, {
                    type: "bar",
                    data: {
                        labels: [
                            "JAN",
                            "FEB",
                            "MAR",
                            "APR",
                            "MAY",
                            "JUN",
                            "JUL",
                            "AUG",
                            "SEP",
                            "OCT",
                            "NOV",
                            "DEC",
                        ],
                        datasets: [
                            {
                                label: "Sales",
                                data: [
                                    80, 120, 110, 220, 250, 190, 220, 90, 230,
                                    210, 280, 330,
                                ],
                                backgroundColor: "#6366f1",
                                borderRadius: 4,
                                barThickness: 12,
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: false,
                            },
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    drawBorder: false,
                                },
                                ticks: {
                                    stepSize: 100,
                                },
                            },
                            x: {
                                grid: {
                                    display: false,
                                },
                            },
                        },
                    },
                });

                // Progress Chart
                const progressCtx = document
                    .getElementById("progressChart")
                    .getContext("2d");
                const progressChart = new Chart(progressCtx, {
                    type: "doughnut",
                    data: {
                        datasets: [
                            {
                                data: [75.55, 24.45],
                                backgroundColor: ["#6366f1", "#f5f5f5"],
                                borderWidth: 0,
                                cutout: "80%",
                            },
                        ],
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: false,
                            },
                            tooltip: {
                                enabled: false,
                            },
                        },
                    },
                });
            });
        </script>
    </body>
</html>
