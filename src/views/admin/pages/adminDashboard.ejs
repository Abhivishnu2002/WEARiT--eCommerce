<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Dashboard | WEARiT</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css"
        />
        <!-- Date Range Picker CSS -->
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/css/admin-navbar.css" />
        <link rel="stylesheet" href="/css/admin-dashboard.css" />
    </head>
    <body>
        <%- include('../partials/navbar', {activePage: 'dashboard'}) %>
        <main class="admin-main">
            <div class="admin-content">
                <div class="page-header">
                    <h2 class="page-title">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">
                                Dashboard
                            </li>
                        </ol>
                    </nav>
                </div>

                <!-- Flash Messages -->
                <% if (locals.success_msg && success_msg.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %> 
                
                <% if (locals.error_msg && error_msg.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <%= error_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                <!-- Dashboard Filter Controls -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-3">
                                    <i class="fas fa-filter me-2"></i>
                                    Time Period Filter
                                </h6>
                                <div class="d-flex flex-wrap gap-2">
                                    <div class="btn-group" role="group" aria-label="Time period filter">
                                        <input type="radio" class="btn-check" name="dashboardPeriod" id="dashboardDaily" value="daily" <%= period === 'daily' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-primary" for="dashboardDaily">Daily</label>
                                        
                                        <input type="radio" class="btn-check" name="dashboardPeriod" id="dashboardWeekly" value="weekly" <%= period === 'weekly' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-primary" for="dashboardWeekly">Weekly</label>
                                        
                                        <input type="radio" class="btn-check" name="dashboardPeriod" id="dashboardMonthly" value="monthly" <%= !period || period === 'monthly' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-primary" for="dashboardMonthly">Monthly</label>
                                        
                                        <input type="radio" class="btn-check" name="dashboardPeriod" id="dashboardYearly" value="yearly" <%= period === 'yearly' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-primary" for="dashboardYearly">Yearly</label>
                                        
                                        <input type="radio" class="btn-check" name="dashboardPeriod" id="dashboardCustom" value="custom" <%= period === 'custom' ? 'checked' : '' %>>
                                        <label class="btn btn-outline-primary" for="dashboardCustom">Custom</label>
                                    </div>
                                </div>
                                
                                <!-- Date Range Picker - Initially hidden, shown when Custom is selected -->
                                <div id="dateRangePickerContainer" class="mt-3 <%= period === 'custom' ? '' : 'd-none' %>">
                                    <div class="input-group" style="max-width: 400px;">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        <input type="text" id="dateRangePicker" class="form-control" 
                                            value="<%= locals.dateRange ? `${dateRange.startDate} - ${dateRange.endDate}` : '' %>" 
                                            placeholder="Select date range">
                                        <button id="applyDateRange" class="btn btn-primary">Apply</button>
                                    </div>
                                    <small class="text-muted">Select a custom date range to view data</small>
                                </div>
                            </div>
                            <div class="col-md-4 text-end">
                                <div class="d-flex align-items-center justify-content-end">
                                    <div class="spinner-border spinner-border-sm me-2 d-none" id="dashboardLoader" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <small class="text-muted" id="lastUpdated">
                                        Last updated: <span id="updateTime"><%= new Date().toLocaleTimeString() %></span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Stats Cards -->
                <div class="row g-3 w-100">
                    <div class="col-lg-3 col-md-6">
                        <div class="stat-card">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background-color: #e6f7ee">
                                    <i class="fas fa-users" style="color: #0d6efd"></i>
                                </div>
                                <div>
                                    <p class="stat-title">Total Customers</p>
                                    <h2 class="stat-value"><%= totalCustomers || 0 %></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="stat-card">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background-color: #e6f7ee">
                                    <i class="fas fa-shopping-cart" style="color: #0d6efd"></i>
                                </div>
                                <div>
                                    <p class="stat-title">Total Orders</p>
                                    <h2 class="stat-value"><%= totalOrders || 0 %></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="stat-card">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background-color: #e6f7ee">
                                    <i class="fas fa-rupee-sign" style="color: #0d6efd"></i>
                                </div>
                                <div>
                                    <p class="stat-title">Total Sales</p>
                                    <h2 class="stat-value">â‚¹<%= (totalSales || 0).toLocaleString('en-IN') %></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="stat-card">
                            <div class="d-flex align-items-center">
                                <div class="stat-icon" style="background-color: #e6f7ee">
                                    <i class="fas fa-hourglass-half" style="color: #0d6efd"></i>
                                </div>
                                <div>
                                    <p class="stat-title">Pending Orders</p>
                                    <h2 class="stat-value"><%= pendingOrders || 0 %></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Charts Section -->
                <div class="row g-3 mb-4">
                    <div class="col-lg-8 col-md-12">
                        <div class="chart-container">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0">
                                    <i class="fas fa-chart-line text-primary"></i>
                                    Sales Trend
                                </h5>
                                <div class="chart-legend d-flex gap-3">
                                    <div class="d-flex align-items-center">
                                        <div class="legend-color" style="background-color: #0d6efd; width: 12px; height: 12px; border-radius: 2px; margin-right: 5px;"></div>
                                        <small>Revenue</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div class="legend-color" style="background-color: #ffc107; width: 12px; height: 12px; border-radius: 2px; margin-right: 5px;"></div>
                                        <small>Discounts</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div class="legend-color" style="background-color: #198754; width: 12px; height: 12px; border-radius: 2px; margin-right: 5px;"></div>
                                        <small>Orders</small>
                                    </div>
                                </div>
                            </div>
                            <div class="chart-wrapper" style="position: relative; height: 300px; width: 100%;">
                                <canvas id="salesTrendChart"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-12">
                        <div class="chart-container">
                            <h5 class="mb-3">
                                <i class="fas fa-chart-pie text-success"></i>
                                Payment Methods
                            </h5>
                            <div class="chart-wrapper" style="position: relative; height: 300px; width: 100%;">
                                <canvas id="paymentMethodChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Best Selling Analytics Section -->
                <div class="analytics-section">
                    <h4 class="analytics-title">
                        <i class="fas fa-trophy"></i>
                        Best Selling Analytics
                    </h4>
                    
                    <div class="row g-3">
                        <!-- Best Selling Products -->
                        <div class="col-lg-4 col-md-12">
                            <div class="chart-container">
                                <h5 class="mb-3">
                                    <i class="fas fa-box text-success"></i>
                                    Top 10 Products
                                </h5>
                                <% if (bestSellingProducts && bestSellingProducts.length > 0) { %>
                                    <div class="mt-3 scrollable-list">
                                        <% bestSellingProducts.forEach((product, index) => { %>
                                        <div class="best-selling-item">
                                            <div class="item-rank <%= index === 0 ? 'gold' : index === 1 ? 'silver' : index === 2 ? 'bronze' : '' %>">
                                                <%= index + 1 %>
                                            </div>
                                            <div class="item-info">
                                                <div class="item-name"><%= product.name.substring(0, 25) %><%= product.name.length > 25 ? '...' : '' %></div>
                                                <div class="item-stats">â‚¹<%= product.totalRevenue.toLocaleString('en-IN') %> revenue</div>
                                            </div>
                                            <div class="item-value">
                                                <%= product.totalQuantity %>
                                            </div>
                                        </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center text-muted py-4">
                                        <i class="fas fa-box fa-2x mb-2"></i>
                                        <p>No product data available</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Best Selling Categories -->
                        <div class="col-lg-4 col-md-12">
                            <div class="chart-container">
                                <h5 class="mb-3">
                                    <i class="fas fa-th-large text-primary"></i>
                                    Top 10 Categories
                                </h5>
                                <% if (bestSellingCategories && bestSellingCategories.length > 0) { %>
                                    <div class="mt-3 scrollable-list">
                                        <% bestSellingCategories.forEach((category, index) => { %>
                                        <div class="best-selling-item">
                                            <div class="item-rank <%= index === 0 ? 'gold' : index === 1 ? 'silver' : index === 2 ? 'bronze' : '' %>">
                                                <%= index + 1 %>
                                            </div>
                                            <div class="item-info">
                                                <div class="item-name"><%= category.name %></div>
                                                <div class="item-stats">â‚¹<%= category.totalRevenue.toLocaleString('en-IN') %> revenue</div>
                                            </div>
                                            <div class="item-value">
                                                <%= category.totalQuantity %>
                                            </div>
                                        </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center text-muted py-4">
                                        <i class="fas fa-th-large fa-2x mb-2"></i>
                                        <p>No category data available</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <!-- Best Selling Brands -->
                        <div class="col-lg-4 col-md-12">
                            <div class="chart-container">
                                <h5 class="mb-3">
                                    <i class="fas fa-tags text-warning"></i>
                                    Top 10 Brands
                                </h5>
                                <% if (bestSellingBrands && bestSellingBrands.length > 0) { %>
                                    <div class="mt-3 scrollable-list">
                                        <% bestSellingBrands.forEach((brand, index) => { %>
                                        <div class="best-selling-item">
                                            <div class="item-rank <%= index === 0 ? 'gold' : index === 1 ? 'silver' : index === 2 ? 'bronze' : '' %>">
                                                <%= index + 1 %>
                                            </div>
                                            <div class="item-info">
                                                <div class="item-name"><%= brand.name %></div>
                                                <div class="item-stats"><%= brand.totalQuantity %> units sold</div>
                                            </div>
                                            <div class="item-value">
                                                â‚¹<%= (brand.totalRevenue/1000).toFixed(0) %>k
                                            </div>
                                        </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center text-muted py-4">
                                        <i class="fas fa-tags fa-2x mb-2"></i>
                                        <p>No brand data available</p>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders Table -->
                <h4 class="recent-orders-title">
                    <i class="fas fa-list-alt"></i>
                    Recent Orders
                </h4>
                <div class="row g-3 w-100 mb-4">
                    <div class="col-12">
                        <div class="chart-container">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th><i class="fas fa-box me-1"></i>Product</th>
                                            <th><i class="fas fa-hashtag me-1"></i>Order ID</th>
                                            <th><i class="fas fa-credit-card me-1"></i>Payment</th>
                                            <th><i class="fas fa-info-circle me-1"></i>Status</th>
                                            <th><i class="fas fa-cog me-1"></i>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (orders && orders.length > 0) { %> 
                                        <% orders.forEach(order => { %>
                                        <tr>
                                            <td><%= order.productName || 'N/A' %></td>
                                            <td><%= order.productNumber || 'N/A' %></td>
                                            <td>
                                                <span class="badge bg-<%= order.paymentType === 'COD' ? 'secondary' : 'primary' %>">
                                                    <%= order.paymentType || 'N/A' %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (order.status === 'Pending') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock me-1"></i>Pending
                                                </span>
                                                <% } else if (order.status === 'Delivered') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Delivered
                                                </span>
                                                <% } else if (order.status === 'Cancelled') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times me-1"></i>Cancelled
                                                </span>
                                                <% } else { %>
                                                <span class="badge bg-primary"><%= order.status %></span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/orders/<%= order.productNumber %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %> 
                                        <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-4">
                                                <i class="fas fa-inbox fa-2x text-muted mb-2"></i>
                                                <p class="text-muted mb-0">No recent orders found</p>
                                            </td>
                                        </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
        <script src="/js/admin-navbar.js"></script>

        <!-- Chart.js Library -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

        <!-- Date Range Picker Dependencies -->
        <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

        <!-- Dashboard Chart Data -->
        <% if (locals.chartData && locals.paymentMethods) { %>
        <script>
            window.dashboardChartData = {
                chartData: <%- JSON.stringify(chartData) %>,
                paymentMethods: <%- JSON.stringify(paymentMethods) %>,
                currentPeriod: '<%= period || "monthly" %>',
                dateRange: <%- JSON.stringify(locals.dateRange || {}) %>
            };
        </script>
        <% } %>

        <!-- Dashboard Charts Script -->
        <script src="/js/admin-dashboard-charts.js"></script>
    </body>
</html>
