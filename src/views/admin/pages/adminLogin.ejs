<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Login</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Bootstrap Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
        />
    </head>
    <body>
        <div class="container">
            <div
                class="row justify-content-center align-items-center min-vh-100"
            >
                <div class="col-md-6 col-lg-4">
                    <div class="text-center mb-4">
                        <h2 class="fw-normal">Admin Login</h2>
                    </div>
                    <form>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                required
                            />
                        </div>
                        <div class="mb-4">
                            <div class="d-flex justify-content-between">
                                <label for="password" class="form-label"
                                    >Password</label
                                >
                                <div class="form-text">
                                    <i class="bi bi-eye-slash"></i> Hide
                                </div>
                            </div>
                            <input
                                type="password"
                                class="form-control"
                                id="password"
                                required
                            />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark py-2">
                                Log in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Optional JavaScript for password visibility toggle -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const passwordToggle = document.querySelector(".form-text");
                const passwordInput = document.getElementById("password");
                const eyeIcon = document.querySelector(".bi");

                passwordToggle.addEventListener("click", function () {
                    if (passwordInput.type === "password") {
                        passwordInput.type = "text";
                        eyeIcon.classList.remove("bi-eye-slash");
                        eyeIcon.classList.add("bi-eye");
                        passwordToggle.innerHTML =
                            '<i class="bi bi-eye"></i> Show';
                    } else {
                        passwordInput.type = "password";
                        eyeIcon.classList.remove("bi-eye");
                        eyeIcon.classList.add("bi-eye-slash");
                        passwordToggle.innerHTML =
                            '<i class="bi bi-eye-slash"></i> Hide';
                    }
                });
            });
        </script>
    </body>
</html>
