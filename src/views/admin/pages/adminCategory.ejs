<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Category Management</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Font Awesome -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        />
        <!-- SweetAlert2 CSS -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css"
        />
        <style>
            body {
                font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f8f9fa;
                overflow-x: hidden;
            }

            /* Sidebar styles */
            .sidebar {
                width: 220px;
                background-color: #ffffff;
                height: 100vh;
                position: fixed;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
                z-index: 1030;
                transition: all 0.3s ease;
            }

            .main-content {
                margin-left: 220px;
                padding: 20px;
                background-color: #f8f9fa;
                transition: all 0.3s ease;
                width: calc(100% - 220px);
            }

            .logo {
                font-weight: 800;
                font-size: 24px;
                padding: 20px;
            }

            .nav-item {
                margin-bottom: 5px;
            }

            .nav-link {
                color: #6c757d;
                padding: 12px 20px;
                border-radius: 5px;
                margin: 0 10px;
                display: flex;
                align-items: center;
            }

            .nav-link i {
                margin-right: 10px;
                width: 20px;
            }

            .nav-link:hover,
            .nav-link.active {
                background-color: #f8f9fa;
                color: #000;
            }

            .nav-link.active {
                font-weight: 600;
            }

            /* Bottom buttons */
            .bottom-buttons {
                position: absolute;
                bottom: 20px;
                width: 100%;
                padding: 0 20px;
            }

            .btn-account {
                width: 100%;
                margin-bottom: 10px;
                border: 1px solid #dee2e6;
                background-color: transparent;
                color: #212529;
            }

            .btn-logout {
                width: 100%;
                background-color: #212529;
                color: #fff;
            }

            /* Category table styles */
            .category-table {
                background-color: #fff;
                border-radius: 8px;
                overflow: hidden;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            }

            .category-table th {
                background-color: #000;
                color: #fff;
                font-weight: 500;
                padding: 12px 15px;
            }

            .category-table td {
                padding: 15px;
                vertical-align: middle;
            }

            /* Toggle switch */
            .switch {
                position: relative;
                display: inline-block;
                width: 60px;
                height: 30px;
            }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

            .slider {
                position: absolute;
                cursor: pointer;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                transition: 0.4s;
                border-radius: 34px;
            }

            .slider:before {
                position: absolute;
                content: "";
                height: 22px;
                width: 22px;
                left: 4px;
                bottom: 4px;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }

            input:checked + .slider {
                background-color: #f44336;
            }

            input:checked + .slider.green {
                background-color: #4caf50;
            }

            input:checked + .slider:before {
                transform: translateX(30px);
            }

            .switch-label {
                font-size: 12px;
                font-weight: 600;
                text-align: center;
                display: block;
                margin-top: 5px;
            }

            /* Action buttons */
            .action-btn {
                background-color: transparent;
                border: none;
                color: #6c757d;
                padding: 5px;
                margin: 0 3px;
            }

            .action-btn:hover {
                color: #000;
            }

            .delete-btn:hover {
                color: #dc3545;
            }

            /* Offer button */
            .btn-add-offer {
                background-color: #000;
                color: #fff;
                border: none;
                padding: 8px 15px;
                border-radius: 5px;
                font-size: 14px;
            }

            .offer-text {
                font-weight: 600;
                color: #000;
            }

            /* User profile */
            .user-profile {
                display: flex;
                align-items: center;
                padding: 10px;
                background-color: transparent;
                border-radius: 10px;
            }

            .user-avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
                object-fit: cover;
            }

            .user-info {
                line-height: 1.2;
            }

            .user-name {
                font-weight: 600;
                margin-bottom: 0;
            }

            .user-role {
                color: #6c757d;
                font-size: 12px;
            }

            /* Mobile navbar */
            .mobile-nav {
                display: none;
                background-color: #ffffff;
                padding: 15px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                width: 100%;
            }

            .mobile-nav .logo {
                padding: 0;
            }

            /* Responsive styles */
            @media (max-width: 991.98px) {
                .sidebar {
                    transform: translateX(-100%);
                    z-index: 1050;
                }

                .sidebar.show {
                    transform: translateX(0);
                }

                .main-content {
                    margin-left: 0;
                    padding: 15px;
                    width: 100%;
                }

                .mobile-nav {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                }

                .bottom-buttons {
                    position: static;
                    padding: 20px;
                }

                .sidebar-overlay {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color: rgba(0, 0, 0, 0.5);
                    z-index: 1040;
                    display: none;
                }

                .sidebar-overlay.show {
                    display: block;
                }

                .category-table {
                    overflow-x: auto;
                }

                .header-section {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .header-section .btn {
                    margin-top: 10px;
                    width: 100%;
                }

                .sort-section {
                    margin-top: 15px;
                    width: 100%;
                    overflow-x: auto;
                    white-space: nowrap;
                }
            }

            @media (max-width: 767.98px) {
                .breadcrumb-section {
                    flex-direction: column;
                    align-items: flex-start;
                }

                .user-profile {
                    margin-bottom: 15px;
                }

                .category-table th,
                .category-table td {
                    padding: 10px 8px;
                    font-size: 14px;
                }

                .switch {
                    width: 50px;
                    height: 25px;
                }

                .slider:before {
                    height: 17px;
                    width: 17px;
                }

                input:checked + .slider:before {
                    transform: translateX(25px);
                }
            }

            @media (max-width: 575.98px) {
                .table-responsive {
                    border: none;
                }

                .search-section {
                    flex-direction: column;
                }

                .search-section > div {
                    width: 100%;
                    margin-bottom: 10px;
                }
            }
        </style>
    </head>
    <body>
        <!-- Mobile Navigation -->
        <div class="mobile-nav d-lg-none">
            <div class="logo">WEARiT</div>
            <div class="d-flex align-items-center">
                <div class="dropdown me-3">
                    <img
                        src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-GGFw8KZY7Q1i2VNzU7KQj8M2FQx3u5.png"
                        alt="Admin Avatar"
                        class="user-avatar dropdown-toggle"
                        data-bs-toggle="dropdown"
                    />
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="/admin/account"
                                >Profile</a
                            >
                        </li>
                        <li>
                            <a
                                class="dropdown-item"
                                href="/admin/changepassword"
                                >Change Password</a
                            >
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item" href="/admin/logout"
                                >Logout</a
                            >
                        </li>
                    </ul>
                </div>
                <button class="btn btn-light" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>

        <!-- Sidebar Overlay -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <div class="d-flex w-100">
            <!-- Sidebar -->
            <div class="sidebar" id="sidebar">
                <div class="logo d-none d-lg-block">WEARiT</div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">
                            <i class="fas fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/orders">
                            <i class="fas fa-list"></i> Order List
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/customer">
                            <i class="fas fa-user"></i> Customer
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/sales">
                            <i class="fas fa-chart-line"></i> Sales
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/category">
                            <i class="fas fa-th-large"></i> Category
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/coupons">
                            <i class="fas fa-tags"></i> Coupons
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/banner">
                            <i class="fas fa-image"></i> Banner
                        </a>
                    </li>
                </ul>

                <div class="bottom-buttons">
                    <a href="/admin/account" class="btn btn-account">Account</a>
                    <a href="/admin/logout" class="btn btn-logout">Logout</a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <div
                    class="d-flex justify-content-between align-items-start mb-4 header-section"
                >
                    <div>
                        <h2 class="mb-2">CATEGORY</h2>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a
                                        href="/admin/dashboard"
                                        class="text-decoration-none"
                                        >Dashboard</a
                                    >
                                </li>
                                <li
                                    class="breadcrumb-item active"
                                    aria-current="page"
                                >
                                    Category
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <a href="/admin/addcategory" class="btn btn-dark"
                        >Add Category</a
                    >
                </div>

                <% if (locals.success_msg && success_msg.length > 0) { %>
                <div
                    class="alert alert-success alert-dismissible fade show"
                    role="alert"
                >
                    <%= success_msg %>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="alert"
                        aria-label="Close"
                    ></button>
                </div>
                <% } %> <% if (locals.error_msg && error_msg.length > 0) { %>
                <div
                    class="alert alert-danger alert-dismissible fade show"
                    role="alert"
                >
                    <%= error_msg %>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="alert"
                        aria-label="Close"
                    ></button>
                </div>
                <% } %>

                <!-- Search and Sort -->
                <div
                    class="d-flex justify-content-between align-items-center mb-4 search-section"
                >
                    <form
                        action="/admin/category"
                        method="GET"
                        class="input-group"
                        style="max-width: 400px"
                    >
                        <span class="input-group-text bg-white border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input
                            type="text"
                            name="search"
                            class="form-control border-start-0"
                            placeholder="Search category..."
                            value="<%= locals.searchQuery ? searchQuery : '' %>"
                        />
                        <button type="submit" class="btn btn-dark">
                            Search
                        </button>
                    </form>

                    <div class="sort-section">
                        <div class="btn-group" role="group">
                            <button
                                type="button"
                                class="btn btn-outline-secondary rounded-start rounded-end-0"
                            >
                                Sort
                            </button>
                            <a
                                href="/admin/category?sort=createdAt&order=desc"
                                class="btn btn-outline-secondary <%= locals.sort === 'createdAt' && locals.order === 'desc' ? 'active' : '' %> rounded-0"
                                >Newest</a
                            >
                            <a
                                href="/admin/category?sort=createdAt&order=asc"
                                class="btn btn-outline-secondary <%= locals.sort === 'createdAt' && locals.order === 'asc' ? 'active' : '' %> rounded-0"
                                >Oldest</a
                            >
                            <a
                                href="/admin/category?sort=name&order=asc"
                                class="btn btn-outline-secondary <%= locals.sort === 'name' && locals.order === 'asc' ? 'active' : '' %> rounded-start-0 rounded-end"
                                >A-Z</a
                            >
                        </div>
                    </div>
                </div>

                <!-- Category Table -->
                <div class="table-responsive category-table mb-4">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>SNO</th>
                                <th>Category Name</th>
                                <th>Products</th>
                                <th>Description</th>
                                <th>Added</th>
                                <th>List / Unlist</th>
                                <th>Action</th>
                                <th>Offer</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories && categories.length > 0) { %> <%
                            categories.forEach((category, index) => { %>
                            <tr>
                                <td>
                                    <%= (currentPage - 1) * limit + index + 1 %>
                                </td>
                                <td><%= category.name %></td>
                                <td><%= category.productCount || 0 %></td>
                                <td>
                                    <%= category.description ?
                                    (category.description.length > 30 ?
                                    category.description.substring(0, 30) +
                                    '...' : category.description) : 'N/A' %>
                                </td>
                                <td>
                                    <%= new
                                    Date(category.createdAt).toLocaleDateString()
                                    %>
                                </td>
                                <td>
                                    <form
                                        action="/admin/category/toggle-list/<%= category._id %>"
                                        method="POST"
                                        class="toggle-form"
                                    >
                                        <label class="switch">
                                            <input type="checkbox" <%=
                                            !category.isDeleted ? 'checked' : ''
                                            %> onchange="this.form.submit()"
                                            name="listStatus" value="<%=
                                            category.isDeleted ? 'list' :
                                            'unlist' %>" >
                                            <span
                                                class="slider <%= !category.isDeleted ? 'green' : '' %>"
                                            ></span>
                                        </label>
                                        <span class="switch-label"
                                            ><%= category.isDeleted ? 'LIST' :
                                            'UNLIST' %></span
                                        >
                                    </form>
                                </td>
                                <td>
                                    <a
                                        href="/admin/category/<%= category._id %>"
                                        class="action-btn"
                                    >
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a
                                        href="/admin/category/edit/<%= category._id %>"
                                        class="action-btn"
                                    >
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button
                                        class="action-btn delete-btn"
                                        onclick="confirmDelete('<%= category._id %>', '<%= category.name %>')"
                                    >
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </td>
                                <td>
                                    <% if (category.offer &&
                                    category.offer.percentage > 0) { %>
                                    <div class="offer-text">
                                        <%= category.offer.percentage %>% Off
                                    </div>
                                    <% } else { %>
                                    <a
                                        href="/admin/category/offer/<%= category._id %>"
                                        class="btn-add-offer"
                                        >Add Offer</a
                                    >
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %> <% } else { %>
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    No categories found
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (categories && categories.length > 0) { %>
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="text-muted mb-0">
                            Showing <%= (currentPage - 1) * limit + 1 %>-<%=
                            Math.min(currentPage * limit, totalCategories) %>
                            from <%= totalCategories %>
                        </p>
                    </div>
                    <nav aria-label="Page navigation">
                        <ul class="pagination mb-0">
                            <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="/admin/category?page=<%= currentPage - 1 %><%= searchQuery ? '&search=' + searchQuery : '' %><%= sort ? '&sort=' + sort + '&order=' + order : '' %>"
                                    aria-label="Previous"
                                >
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            <% } else { %>
                            <li class="page-item disabled">
                                <a
                                    class="page-link"
                                    href="#"
                                    aria-label="Previous"
                                >
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            <% } %> <% let startPage = Math.max(1, currentPage -
                            2); let endPage = Math.min(totalPages, startPage +
                            4); if (endPage - startPage < 4 && totalPages > 5) {
                            startPage = Math.max(1, endPage - 4); } for (let i =
                            startPage; i <= endPage; i++) { %>
                            <li
                                class="page-item <%= i === currentPage ? 'active' : '' %>"
                            >
                                <a
                                    class="page-link"
                                    href="/admin/category?page=<%= i %><%= searchQuery ? '&search=' + searchQuery : '' %><%= sort ? '&sort=' + sort + '&order=' + order : '' %>"
                                    ><%= i %></a
                                >
                            </li>
                            <% } %> <% if (endPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="#">...</a>
                            </li>
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="/admin/category?page=<%= totalPages %><%= searchQuery ? '&search=' + searchQuery : '' %><%= sort ? '&sort=' + sort + '&order=' + order : '' %>"
                                    ><%= totalPages %></a
                                >
                            </li>
                            <% } %> <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="/admin/category?page=<%= currentPage + 1 %><%= searchQuery ? '&search=' + searchQuery : '' %><%= sort ? '&sort=' + sort + '&order=' + order : '' %>"
                                    aria-label="Next"
                                >
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                            <% } else { %>
                            <li class="page-item disabled">
                                <a class="page-link" href="#" aria-label="Next">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                            <% } %>
                        </ul>
                    </nav>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <!-- SweetAlert2 JS -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>

        <script>
            // Sidebar Toggle for Mobile
            document.addEventListener("DOMContentLoaded", function () {
                // Check for flash messages
                if (locals.success_msg && success_msg.length > 0) {
                    Swal.fire({
                        icon: "success",
                        title: "Success",
                        text: success_msg,
                        confirmButtonColor: "#000",
                    });
                }

                if (locals.error_msg && error_msg.length > 0) {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: error_msg,
                        confirmButtonColor: "#000",
                    });
                }

                const sidebar = document.getElementById("sidebar");
                const sidebarToggle = document.getElementById("sidebarToggle");
                const sidebarOverlay =
                    document.getElementById("sidebarOverlay");

                if (sidebarToggle) {
                    sidebarToggle.addEventListener("click", function () {
                        sidebar.classList.toggle("show");
                        sidebarOverlay.classList.toggle("show");
                        document.body.classList.toggle("overflow-hidden");
                    });
                }

                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener("click", function () {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    });
                }

                // Close sidebar when clicking on a nav link on mobile
                const navLinks =
                    document.querySelectorAll(".sidebar .nav-link");
                navLinks.forEach((link) => {
                    link.addEventListener("click", function () {
                        if (window.innerWidth < 992) {
                            sidebar.classList.remove("show");
                            sidebarOverlay.classList.remove("show");
                            document.body.classList.remove("overflow-hidden");
                        }
                    });
                });

                // Handle window resize
                window.addEventListener("resize", function () {
                    if (window.innerWidth >= 992) {
                        sidebar.classList.remove("show");
                        sidebarOverlay.classList.remove("show");
                        document.body.classList.remove("overflow-hidden");
                    }
                });

                // Confirm delete action
                window.confirmDelete = function (categoryId, categoryName) {
                    Swal.fire({
                        title: "Delete Category?",
                        text: `Are you sure you want to delete ${categoryName}?`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#000",
                        cancelButtonColor: "#6c757d",
                        confirmButtonText: "Yes, delete it!",
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/admin/category/delete/${categoryId}`;
                        }
                    });
                };

                // Confirm list/unlist action
                const toggleForms = document.querySelectorAll(".toggle-form");
                toggleForms.forEach((form) => {
                    const checkbox = form.querySelector(
                        'input[type="checkbox"]'
                    );
                    const originalState = checkbox.checked;

                    checkbox.addEventListener("change", function (e) {
                        e.preventDefault();
                        const action = this.value;
                        const categoryName =
                            this.closest("tr").querySelector(
                                "td:nth-child(2)"
                            ).textContent;

                        Swal.fire({
                            title: `${
                                action === "list" ? "List" : "Unlist"
                            } Category?`,
                            text: `Are you sure you want to ${action} ${categoryName}?`,
                            icon: "warning",
                            showCancelButton: true,
                            confirmButtonColor: "#000",
                            cancelButtonColor: "#6c757d",
                            confirmButtonText: `Yes, ${action}!`,
                        }).then((result) => {
                            if (result.isConfirmed) {
                                form.submit();
                            } else {
                                // Reset checkbox to original state if canceled
                                checkbox.checked = originalState;
                            }
                        });
                    });
                });
            });
        </script>
    </body>
</html>
