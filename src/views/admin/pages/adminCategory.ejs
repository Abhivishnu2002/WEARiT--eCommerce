<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEARiT - Category</title>
        <!-- Bootstrap CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <!-- Bootstrap Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
        />
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div
                    class="col-md-3 col-lg-2 d-md-block bg-white shadow-sm p-0"
                    style="height: 100vh"
                >
                    <div class="d-flex flex-column h-100">
                        <div class="p-3 border-bottom">
                            <h4 class="fw-bold">WEARiT</h4>
                        </div>
                        <div class="list-group list-group-flush flex-grow-1">
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-grid-1x2-fill me-2"></i>
                                Dashboard
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-box-seam me-2"></i> Products
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-list-ul me-2"></i> Order List
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-person me-2"></i> Customer
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-currency-dollar me-2"></i> Sales
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action active border-0 py-3"
                            >
                                <i class="bi bi-grid me-2"></i> Category
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-ticket-perforated me-2"></i>
                                Coupons
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                            <a
                                href="#"
                                class="list-group-item list-group-item-action border-0 py-3"
                            >
                                <i class="bi bi-image me-2"></i> Banner
                                <i class="bi bi-chevron-right float-end"></i>
                            </a>
                        </div>
                        <div class="mt-auto p-3">
                            <button class="btn btn-outline-dark w-100 mb-2">
                                Account
                            </button>
                            <button class="btn btn-dark w-100">Logout</button>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10 ms-sm-auto bg-light">
                    <!-- Header with Admin Profile -->
                    <div
                        class="bg-white p-3 d-flex justify-content-end shadow-sm"
                    >
                        <div class="d-flex align-items-center">
                            <img
                                src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/WEARiT-ZUrGh6ErX8xmYtCm0g5u2eKFleenP7.png"
                                alt="Profile"
                                class="rounded-circle"
                                width="40"
                                height="40"
                            />
                            <div class="ms-2">
                                <div class="fw-bold">Abhijith</div>
                                <div class="text-muted small">Admin</div>
                            </div>
                            <i class="bi bi-chevron-down ms-2"></i>
                        </div>
                    </div>

                    <!-- Category Content -->
                    <div class="p-4">
                        <div
                            class="d-flex justify-content-between align-items-center mb-4"
                        >
                            <div>
                                <h2 class="mb-0">CATEGORY</h2>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb mb-0">
                                        <li class="breadcrumb-item">
                                            <a
                                                href="#"
                                                class="text-decoration-none"
                                                >Dashboard</a
                                            >
                                        </li>
                                        <li class="breadcrumb-item active">
                                            category
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                            <button class="btn btn-dark">Add Category</button>
                        </div>

                        <!-- Search and Sort -->
                        <div class="d-flex justify-content-between mb-4">
                            <div class="input-group" style="max-width: 300px">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Search category..."
                                />
                            </div>
                            <div class="btn-group">
                                <button class="btn btn-outline-secondary">
                                    Sort
                                </button>
                                <button class="btn btn-outline-secondary">
                                    Price High-Low
                                </button>
                                <button class="btn btn-outline-secondary">
                                    Price Low-High
                                </button>
                                <button class="btn btn-outline-secondary">
                                    Last added first
                                </button>
                            </div>
                        </div>

                        <!-- Categories Table -->
                        <div class="card border-0 shadow-sm">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>SNO</th>
                                            <th>Category Name</th>
                                            <th>Sales</th>
                                            <th>Stock</th>
                                            <th>Added</th>
                                            <th>List / Unlist</th>
                                            <th>Action</th>
                                            <th>Offer</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Category Row 1 -->
                                        <tr>
                                            <td>1</td>
                                            <td>Formals</td>
                                            <td>15,020</td>
                                            <td>2000</td>
                                            <td>29 Dec 2022</td>
                                            <td>
                                                <div
                                                    class="form-check form-switch"
                                                >
                                                    <input
                                                        class="form-check-input"
                                                        type="checkbox"
                                                        role="switch"
                                                        checked
                                                    />
                                                    <label
                                                        class="form-check-label text-success"
                                                        >UNLIST</label
                                                    >
                                                </div>
                                            </td>
                                            <td class="d-flex">
                                                <button
                                                    class="btn btn-sm btn-outline-secondary me-1"
                                                >
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button
                                                    class="btn btn-sm btn-outline-secondary"
                                                >
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <div
                                                    class="d-flex align-items-center"
                                                >
                                                    <span class="me-2"
                                                        >20%Offf</span
                                                    >
                                                    <button
                                                        class="btn btn-sm btn-outline-secondary me-1"
                                                    >
                                                        <i
                                                            class="bi bi-pencil"
                                                        ></i>
                                                    </button>
                                                    <button
                                                        class="btn btn-sm btn-outline-danger"
                                                    >
                                                        <i
                                                            class="bi bi-trash"
                                                        ></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Category Row 2 -->
                                        <tr>
                                            <td>2</td>
                                            <td>Premium</td>
                                            <td>998</td>
                                            <td>700</td>
                                            <td>24 Dec 2022</td>
                                            <td>
                                                <div
                                                    class="form-check form-switch"
                                                >
                                                    <input
                                                        class="form-check-input"
                                                        type="checkbox"
                                                        role="switch"
                                                        checked
                                                    />
                                                    <label
                                                        class="form-check-label text-success"
                                                        >UNLIST</label
                                                    >
                                                </div>
                                            </td>
                                            <td class="d-flex">
                                                <button
                                                    class="btn btn-sm btn-outline-secondary me-1"
                                                >
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button
                                                    class="btn btn-sm btn-outline-secondary"
                                                >
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <button
                                                    class="btn btn-sm btn-dark"
                                                >
                                                    Add Offer
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Category Row 3 -->
                                        <tr>
                                            <td>3</td>
                                            <td>Casual</td>
                                            <td>576</td>
                                            <td>500</td>
                                            <td>12 Dec 2022</td>
                                            <td>
                                                <div
                                                    class="form-check form-switch"
                                                >
                                                    <input
                                                        class="form-check-input"
                                                        type="checkbox"
                                                        role="switch"
                                                    />
                                                    <label
                                                        class="form-check-label text-danger"
                                                        >LIST</label
                                                    >
                                                </div>
                                            </td>
                                            <td class="d-flex">
                                                <button
                                                    class="btn btn-sm btn-outline-secondary me-1"
                                                >
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <button
                                                    class="btn btn-sm btn-outline-secondary"
                                                >
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <div
                                                    class="d-flex align-items-center"
                                                >
                                                    <span class="me-2"
                                                        >200rs Offf</span
                                                    >
                                                    <button
                                                        class="btn btn-sm btn-outline-secondary me-1"
                                                    >
                                                        <i
                                                            class="bi bi-pencil"
                                                        ></i>
                                                    </button>
                                                    <button
                                                        class="btn btn-sm btn-outline-danger"
                                                    >
                                                        <i
                                                            class="bi bi-trash"
                                                        ></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
